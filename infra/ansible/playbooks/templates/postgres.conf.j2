listen_addresses = 'localhost,{{ ansible_default_ipv4.address | default(ansible_all_ipv4_addresses[0]) }}'
port = 5432

# Shared Libraries
shared_preload_libraries = 'pglogical,pg_stat_statements'
pg_stat_statements.track = all

# PGBackRest configuration

archive_command = 'pgbackrest --stanza=radar archive-push %p'
archive_mode = on
max_wal_senders = 3
wal_level = replica
max_wal_size = 4GB
min_wal_size = 2GB


# Statistics Collectors

log_min_duration_statement = '1s'
log_autovacuum_min_duration = 0

track_activities = on
track_counts = on
track_io_timing = on
track_wal_io_timing = on




# Generated by PGConfig 3.1.4 (1fe6d98dedcaad1d0a114617cfd08b4fed1d8a01)
# https://api.pgconfig.org/v1/tuning/get-config?format=conf&include_pgbadger=true&log_format=syslog&max_connections=400&pg_version=16&environment_name=WEB&total_ram=4GB&cpus=2&drive_type=SSD&arch=x86-64&os_type=linux

# Memory Configuration
shared_buffers = 1GB
effective_cache_size = 3GB
work_mem = 3MB
maintenance_work_mem = 205MB

# Checkpoint Related Configuration
checkpoint_completion_target = 0.9
wal_buffers = -1

# Network Related Configuration
max_connections = 1000

# Storage Configuration
random_page_cost = 1.1
effective_io_concurrency = 200

# Worker Processes Configuration
max_worker_processes = 8
max_parallel_workers_per_gather = 2
max_parallel_workers = 2


logging_collector = on
log_checkpoints = on
log_connections = on
log_disconnections = on
log_lock_waits = on
log_temp_files = 0
log_rotation_size = 10MB
lc_messages = 'C'


# SYSLOG Configuration
log_destination = 'syslog'
log_line_prefix = 'user=%u,db=%d,app=%a,client=%h '
syslog_facility = 'LOCAL0'
syslog_ident = 'postgres'


