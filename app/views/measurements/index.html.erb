<p id="notice"><%= notice %></p>

<h1>Measurements</h1>

<%= link_to 'Download All', client_measurements_path(@client.unix_user, format: 'csv') %>
<%= link_to 'Download ND7 with Extended Info', ndt7_index_client_measurements_path(@client.unix_user, format: 'csv') %>

<table>
  <thead>
    <tr>
      <th>At</th>
      <th>Style</th>
      <th>Download</th>
      <th>Upload</th>
      <th>Latency</th>
      <th>Jitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.order(created_at: :desc).each do |measurement| %>
      <tr>
        <td><%= measurement.created_at %></td>
        <td><%= measurement.style %></td>
        <td><%= number_with_precision measurement.download, precision: 3 %></td>
        <td><%= number_with_precision measurement.upload, precision: 3 %></td>
        <td><%= number_with_precision measurement.latency, precision: 3 %></td>
        <td><%= number_with_precision measurement.jitter, precision: 3 %></td>
        <td><%= link_to 'Show', client_measurement_path(@client.unix_user, measurement) %></td>
        <td><%= link_to 'Edit', edit_client_measurement_path(@client.unix_user, measurement) %></td>
        <td><%= link_to 'Destroy', [@client, measurement], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Measurement', new_client_measurement_path(@client.unix_user) %> |
<%= link_to 'Back', client_path(@client.unix_user) %>
