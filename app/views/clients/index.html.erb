<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Location</th>
      <th>Online</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.unix_user %></td>
        <td><%= client.location != nil ? link_to(client.location.name, location_path(client.location)) : "" %></td>
        <td><%= client.online?.to_s %></td>
        <td><%= link_to 'Show', client_path(client.unix_user) %></td>
        <td><%= link_to 'Edit', edit_client_path(client.unix_user) %></td>
        <td><%= link_to 'Release', release_client_path(client.unix_user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

