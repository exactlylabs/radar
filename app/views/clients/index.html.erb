<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Online</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.online?.to_s %></td>
        <td><%= link_to 'Show', client_path(client.unix_user) %></td>
        <td><%= link_to 'Edit', edit_client_path(client.unix_user) %></td>
        <td><%= link_to 'Release', release_client_path(client.unix_user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Client', claim_clients_path %>

<%= map(:center => {
    :latlng => [39.8097343, -98.5556199],
    :zoom => 3
  },
  :markers => @clients.where.not(latitude: nil).map do |c| 
    {
      latlng: [c.latitude, c.longitude],
      popup: "<a href=#{client_path(c.unix_user)}>#{c.name}</a><br />Latest Download: #{c.latest_download} mbps<br />Latest Upload: #{c.latest_upload} mbps"
    }
  end
)
%>