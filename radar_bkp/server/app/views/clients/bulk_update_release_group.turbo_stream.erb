<%= turbo_stream.update 'notice-container' do %>
  <%= render partial: 'application/notice_alert', locals: {notice: @notice} %>
<% end %>

<%= @clients.each do |c| %>
  <%= turbo_stream.replace c do %>
    <%= render partial: "clients_table_row", locals: { client: c, selected: true }%>
  <% end %>
<% end %>