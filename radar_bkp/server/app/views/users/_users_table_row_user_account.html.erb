<tr id="<%= dom_id(user_account) %>">
  <td style="padding-left: 30px">
    <div class="d-flex flex-row align-items-center">
      <div class="d-flex align-items-center justify-content-center me-5"
           style="border-radius:50%; background-color: <%= is_even ? '#f1faff' : '#e8fff3' %>; min-width: 36px; width: 36px; min-height: 36px; height: 36px">
        <span class="<%= is_even ? 'text-primary' : 'text-success'%>" style="position: relative; font-size: 16px">
          <%= user_account.user.get_letter_for_icon %>
        </span>
      </div>
      <div class="d-flex flex-column">
        <a class="forms--label"
           style="max-width: 15vw; text-overflow: ellipsis; overflow: hidden; white-space: nowrap;"
           href="<%= users_account_path(user_account, type: user_account.class.name)%>"
           data-turbo-frame="_top"
        >
          <%= "#{user_account.user.first_name} #{user_account.user.last_name}" %>
        </a>
        <div class="additional-text"><%= user_account.user.email %></div>
      </div>
    </div>
  </td>
  <% if current_account.is_all_accounts? %>
    <td class="forms--label"
        style="max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
      <span><%= user_account.account.name %></span>
    </td>
  <% end %>
  <td class="forms--label"
      style="max-width: <%= current_account.is_all_accounts? ? '10vw' : '15vw' %>;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
    <span><%= pretty_print_date(user_account.invited_at) %></span>
  </td>
  <td class="forms--label"
      style="font-size:14px; max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
    <span style="color: #5e6278;"><%= pretty_print_date(user_account.joined_at) %></span>
  </td>
  <td class="mb-1">
    <span class="custom-badge custom-badge--online"><%= user_account.status_to_human %></span>
  </td>
  <td class=""
      style="font-size:14px; color: #7e8299">
  </td>
  <td class="text-end" style="padding-right: 30px">
    <div class="btn-group dropend">
      <%= render partial: "application/components/buttons/more_options_button", locals: { id: "options-button-#{user_account.id}" } %>
      <div class="dropdown-menu fw-bold py-4" aria-labelledby="<%= "options-button-#{user_account.id}" %>">
        <!--begin::Menu item-->
        <div class="dropdowns--option menu-item">
          <%= link_to "View", users_account_path(user_account, type: user_account.class.name), { class: "menu-link text-hover-gray-500 text-gray-700 px-3" } %>
        </div>
        <!--end::Menu item-->
        <!--begin::Menu item-->
        <div class="dropdowns--option menu-item">
          <%= link_to 'Remove', users_account_path(user_account, type: user_account.class.name), method: :delete, data: { confirm: 'Are you sure?' }, class: "menu-link text-hover-gray-500 text-gray-700 px-3" %>
        </div>
        <!--end::Menu item-->
      </div>
    </div>
  </td>
</tr>
