<%= turbo_stream.update "account-categories" do %>
  <% if @categories.count > 0 %>
    <% @categories.each do |category| %>
      <%= render partial: "categories/components/category_list_item",
                 locals: {
                   category: category,
                   selected: false,
                   on_box_checked_path: "account_categories",
                 } %>
    <% end %>
  <% end %>
<% end %>