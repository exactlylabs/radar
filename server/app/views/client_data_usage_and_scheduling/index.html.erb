<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
  <div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
    <!--begin::Info-->
    <div class="d-flex flex-column align-items-start justify-content-center flex-wrap me-2">
      <!--begin::Title-->
      <h1 class="text-dark fw-bolder my-1 fs-2">Data Usage
        <small class="text-muted fs-6 fw-normal ms-1"></small></h1>
      <!--end::Title-->
      <!--begin::Breadcrumb-->
      <ul class="breadcrumb fw-bold fs-base my-1">
        <li class="breadcrumb-item text-muted"><%= current_account.name %>
        </li>
        <li class="breadcrumb-item text-muted">
          <a href="<%= clients_path %>" class="text-muted text-hover-primary">Pods</a>
        </li>
        <li class="breadcrumb-item text-muted">
          <a href="<%= client_path(@client.unix_user) %>" class="text-muted text-hover-primary"><%= @client.name || 'Unnamed Pod' %></a>
        </li>
        <li class="breadcrumb-item text-dark">Data Usage & Scheduling</li>
      </ul>
      <!--end::Breadcrumb-->
    </div>
    <!--end::Info-->
  </div>
</div>
<!--end::Toolbar-->

<div class="post fs-6 d-flex flex-column-fluid justify-content-center" id="kt_post">
  <!--begin::Container-->
  <div class="container-xxl w-100 d-flex" style="max-width: none;">
    <%= render partial: "options_card", locals: { client: @client.unix_user, location: nil, style: 'clients' } %>
    <div class="d-flex flex-column d-xl-block d-md-none" style="width: calc(100% - 16% - 30px)">
      <!--begin::Data Cap Card-->
      <%= render partial: "data_cap_card", locals: {client: @client, total_avg: @total_avg} %>
      <!--end::Data Cap Card-->
      <!--begin::Scheduling Card-->
      <%= render partial: "scheduling_card", locals: {client: @client} %>
      <!--end::Scheduling Card-->
    </div>
    <div class="d-flex flex-column d-xl-none d-md-block" style="width: calc(100% - 8% - 30px)">
      <!--begin::Data Cap Card-->
      <%= render partial: "data_cap_card", locals: {client: @client, total_avg: @total_avg} %>
      <!--end::Data Cap Card-->
      <!--begin::Scheduling Card-->
      <%= render partial: "scheduling_card", locals: {client: @client} %>
      <!--end::Scheduling Card-->
    </div>
  </div>
  <!--end::Container-->
</div>

<div class="modal fade" tabindex="-1" id="manage_pod_data_cap_modal" data-controller="modal" data-action="turbo:submit-end->modal#submit turbo:frame-render->modal#showModal">
  <%= render partial: "client_data_usage_and_scheduling/manage_pod_data_cap_modal", locals: {client: @client} %>
</div>

<div class="modal fade" tabindex="-1" id="manage_pod_scheduling_modal" data-controller="modal" data-action="turbo:submit-end->modal#submit turbo:frame-render->modal#showModal">
  <%= render partial: "client_data_usage_and_scheduling/manage_pod_scheduling_modal", locals: {client: @client} %>
</div>
