<div class="tables--row-container" id="<%= dom_id(row) %>">
  <% if type == TablesHelper::TableTypes::MEMBERS %>
    <%= render partial: "users/components/member_row",
        locals: {
          row: row,
          widths: widths,
          type: row.class.name,
          index: index,
          even: even
        }
    %>
  <% elsif type == TablesHelper::TableTypes::NETWORKS %>
    <%= render partial: "networks/components/network_row",
        locals: { row: row, widths: widths, index: index }
    %>
  <% end %>
</div>