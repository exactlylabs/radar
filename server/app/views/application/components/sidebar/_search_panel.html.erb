<div class="sidebar--search-panel-container">
  <div class="d-flex flex-row justify-content-between align-items-baseline mb-7">
    <h3 class="page-main-title">Search</h3>
    <button type="button"
      class="custom-button custom-button--secondary p-2 d-flex justify-content-center align-items-center"
      data-action="click->sidebar#closeSearchIfOpen"
    >
      <%= image_tag image_url('arrow-left-dark.png'), width: 16, height: 16 %>
    </button>
  </div>
  <%= render partial: "application/components/sidebar/search_input" %>
  <%= turbo_frame_tag "search-panel-results", class: "sidebar--results-container" do %>
    <div class="sidebar--results-container">
      <%= render partial: "application/components/sidebar/recents_section" %>
    </div>
  <% end %>
</div>