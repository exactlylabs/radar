<div class="sidebar--profile-popover-container invisible" data-sidebar-target="profileDataPopover">
  <div class="sidebar--profile-popover-info-container">
    <div class="sidebar--profile-popover-image-container">
      <img src="<%= current_user.avatar.attached? ? url_for(current_user.avatar.variant(resize_to_limit: [56, 56])) : nil %>"
          width="56"
          height="56"
          class="<%= current_user.avatar.attached? ? nil : 'invisible' %> sign-up--avatar-image"
        />
      <p class="sidebar--profile-popover-initial <%= current_user.avatar.attached? ? 'invisible' : nil %>"><%=  current_user.first_name[0].upcase %></p>
    </div>
    <div class="sidebar--profile-popover-text-container">
      <p class="m-0 card-main-title fw-semi-bold ellipsis sidebar--profile-popover-text"><%= current_user.first_name %> <%= current_user.last_name %></p>
      <p class="m-0 additional-text ellipsis sidebar--profile-popover-text"><%= current_user.email %></p>
    </div>
  </div>
  <a class="sidebar--profile-item"
    href="<%= edit_user_registration_path %>">
    <%= image_tag image_url("settings-icon.png"), width: "16", height: "16", class: "sidebar--hidden-option-icon" %>
    <p class="m-0 sidebar-item--profile-text ellipsis">Settings</p>
  </a>
  <a class="sidebar--profile-item"
    rel="nofollow"
    data-method="delete"
    id="sign-out-link"
    href="<%= users_custom_sign_out_path %>"
  >
    <%= image_tag image_url("logout-icon.png"), width: "16", height: "16", class: "sidebar--hidden-option-icon" %>
    <p class="m-0 sidebar-item--profile-text ellipsis">Sign out</p>
  </a>
</div>
