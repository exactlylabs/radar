<div class="sidebar--profile-container"
  data-sidebar-target="profileMenuContainer"
  data-narrow="<%= narrow %>"
  id="sidebar--profile-popover-<%= narrow ? 'narrow' : 'regular' %>"
>
  <div class="sidebar--profile-item cursor-pointer"
    data-sidebar-target="profileMenuToggle"
    data-action="<%= narrow ? 'click->sidebar#closeSearchIfOpen' : nil %> click->sidebar#toggleProfileMenu"
    data-menu-state="closed"
  >
    <div class="sidebar--profile-item-avatar-container">
      <img src="<%= current_user.avatar.attached? ? url_for(current_user.avatar.variant(resize_to_limit: [36, 36])) : nil%>"
        width="36"
        height="36"
        class="<%= current_user.avatar.attached? ? nil : 'invisible' %> sign-up--avatar-image"
      />
      <p class="sidebar--profile-item-initial <%= current_user.avatar.attached? ? 'invisible' : nil %>"><%=  current_user.first_name[0].upcase %></p>
    </div>
    <% if !narrow %>
      <p class="sidebar-item--profile-text sidebar--profile-item-name ellipsis"><%= current_user.first_name %> <%= current_user.last_name %></p>
      <%= render partial: "application/components/sidebar/profile_data_popover" %>
    <% end %>
  </div>
</div>
