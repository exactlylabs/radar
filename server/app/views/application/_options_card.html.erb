<div class="card card-flush d-md-none d-xl-block" style="height: max-content; width: 16%; min-width: 255px; margin-right: 30px">
  <div class="card-body p-5">
    <ul class="list-group list-group-flush w-max-content">
      <% if style == 'clients' %>
        <%= render partial: "client_options_card", locals: {client: client} %>
      <% else %>
        <%= render partial: "location_options_card", locals: {location: location} %>
      <% end %>
    </ul>
  </div>
</div>

