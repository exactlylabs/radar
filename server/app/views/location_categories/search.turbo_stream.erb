<%= turbo_stream.update "location-categories" do %>
  <% if @categories.count > 0 %>
    <% @categories.each do |category| %>
      <%= render partial: "categories/components/category_list_item",
                 locals: {
                   category: category,
                   selected: false,
                   on_box_checked_dir: "location_categories",
                 } %>
    <% end %>
  <% end %>
  <% if @add_category %>
    <%= render partial: "location_categories/inline_add_item", locals: { query: @query } %>
  <% end %>
<% end %>