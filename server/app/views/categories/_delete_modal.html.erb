<%= form_with(model: @category, url: category_path(id: @category.id), method: :delete) do |form| %>
  <div class="modals--content-container" data-type="full">
    <div class="modal-body d-flex flex-column justify-content-center align-items-center text-center">
      <p class="category--delete-modal-title">Are you sure you want to delete "<%= @category.name %>"?</p>
      <p class="category--delete-modal-subtitle">This category is currently used
        by <%= @category.locations.count %> <%= 'location'.pluralize(@category.locations.count) %>.</p>
      <p class="category--delete-modal-subtitle">Your locations will not be deleted.</p>
    </div>
  </div>
  <div class="modals--footer-container">
    <%= render partial: "application/components/buttons/close_modal_button", locals: { text: "Cancel", is_custom: true } %>
    <%= form.submit "Save", class: "custom-button custom-button--danger custom-button--sm me-4" %>
  </div>
<% end %>