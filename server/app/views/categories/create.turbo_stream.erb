<% if policy_scope(Category).count == 1 %>
  <%= turbo_stream.update "categories" do %>
    <%= render partial: "categories/list_item", locals: { category: @category } %>
  <% end %>
<% else %>
  <%= turbo_stream.append "categories" do %>
    <%= render partial: "categories/list_item", locals: { category: @category } %>
  <% end %>
  <%= turbo_stream.remove "account-#{@account_id}-empty-categories" do %>
  <% end %>
<% end %>

<%= turbo_stream.update "new-category-#{@account_id}" do %>
  <%= turbo_frame_tag "new-category-#{@account_id}" do %>
  <% end %>
<% end %>

<%= turbo_stream.replace "location-categories" do %>
  <% policy_scope(Category).each do |category| %>
    <%= render partial: "categories/components/category_list_item", locals: { category: category, selected: false } %>
  <% end %>
<% end %>