<div class="card w-100" style="height:max-content; margin-inline: auto;">
  <!--begin::Card body-->
  <div class="card-body pt-0 px-0">
    <!--begin::Table-->
    <div id="kt_customers_table_wrapper" class="dataTables_wrapper dt-bootstrap4">
      <div class="table-responsive">
        <table class="table table-row-bordered align-middle fs-6 gy-5 dataTable
								no-footer table-rounded" id="kt_customers_table">
          <!--begin::Table head-->
          <thead>
          <!--begin::Table row-->
          <tr class="text-start fw-bolder gs-0"
              style="font-size: 12px; height: 65px">
            <th class="tables--title ps-7" style="width: 20vw;" tabindex="0" aria-controls="kt_customers_table" colspan="1" rowspan="1"
                aria-label="Pod Name">Group Name</th>
            <th class="tables--title"
                style="width: 12.5vw;"
                tabindex="0"
                aria-controls="kt_customers_table"
                aria-sort="ascending"
                colspan="1"
                rowspan="1"
                aria-label="Pod Name">Pods</th>
            <th class="tables--title" style="width: 12.5vw;" tabindex="0" aria-controls="kt_customers_table" colspan="1" rowspan="1"
                aria-label="Status">Version</th>
            <th class="tables--title" style="width: 15vw;" tabindex="0" aria-controls="kt_customers_table" colspan="1" rowspan="1"
                aria-label="Status">Watchdog Version</th>
            <th class="text-end sorting_disabled" style="width: 30vw" colspan="1" rowspan="1" aria-label="SetDefault"></th>
            <th class="text-end sorting_disabled" style="width: 10vw" colspan="1" rowspan="1" aria-label="Options"></th>
          </tr>
          <!--end::Table row-->
          </thead>
          <!--end::Table head-->
          <!--begin::Table body-->
          <tbody class="fw-bold text-gray-600">
            <% paginate_elements(update_groups, [], "LOWER(name) ASC").each do |ug| %>
              <%= render partial: "update_groups_table_row", locals: { update_group: ug } %>
            <% end %>
          </tbody>
          <!--end::Table body-->
        </table>
        <div class="d-flex flex-row justify-content-between align-items-center px-7 <%= update_groups.length == 1 ? "pt-15 pb-7" : "pt-10" %>">
          <%= pagination_footer %>
        </div>
      </div>
    </div>
    <!--end::Table-->
  </div>
  <!--end::Card body-->
</div>
<!--end::Card-->