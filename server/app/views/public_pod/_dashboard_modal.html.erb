<div class="modal-dialog">
    <div class="modal-content">
      <%= render partial: "application/components/modals/modal_header", locals: { title: "Go to dashboard" }%>
      <div class="modal-body modals--body text-center">
        <div id="public--pod-icon-container">
          <%= image_tag image_url('users-icon.png'), id: 'public--users-icon' %>
        </div>
        <p class="modal-main-title my-4">Sign in with a Radar account</p>
        <p class="additional-text wrap mb-8">If you own this pod and are responsible for managing it, you can go to your dashboard using your Radar account.</p>
        
        <a href="/users/sign_in" class="custom-button custom-button--secondary custom-button--lg mx-auto">
          <span class="regular-link">Sign in to my account</span>
          <%= image_tag image_url('arrow-blue-right-icon.png'), id: 'public--button-arrow' %>
        </a>
      </div>
    </div>
  </div>