<div class="card" id="location-details">
  <!--begin::Card header-->
    <div class="card-header align-items-center" style="height: 65px">
      <h2 class="fw-bolder mb-0">Overview</h2>
    </div>
  <!--end::Card header-->
  <!--begin::Card body-->
    <!--begin::Card title-->
      <div class="card-title-container d-flex flex-row justify-content-between align-items-center"
           style="height: 90px;padding-left: 30px;padding-right: 30px;margin-top: 20px;margin-bottom: 50px;">
        <div class="card-title--wrapper d-flex flow-row align-items-center">
          <div class="card-title--icon d-flex align-items-center justify-content-center" 
               style="height: 90px; width: 90px; background-color: #f1faff; border-radius: 50%; margin-right: 20px">
            <span class="svg-icon svg-icon-4x svg-icon-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path opacity="0.3" d="M18.0624 15.3453L13.1624 20.7453C12.5624 21.4453 11.5624 21.4453 10.9624 20.7453L6.06242 15.3453C4.56242 13.6453 3.76242 11.4453 4.06242 8.94534C4.56242 5.34534 7.46242 2.44534 11.0624 2.04534C15.8624 1.54534 19.9624 5.24534 19.9624 9.94534C20.0624 12.0453 19.2624 13.9453 18.0624 15.3453Z" fill="black"/>
              <path d="M12.0624 13.0453C13.7193 13.0453 15.0624 11.7022 15.0624 10.0453C15.0624 8.38849 13.7193 7.04535 12.0624 7.04535C10.4056 7.04535 9.06241 8.38849 9.06241 10.0453C9.06241 11.7022 10.4056 13.0453 12.0624 13.0453Z" fill="black"/>
            </svg>
          </span>
          </div>
          <div class="card-title--title-content">
            <h2 class="fw-bolder mb-0">
              <%= location.name %>
            </h2>
            <div style="color: #b5b5c3;font-size: 14px;">
              <%= location.address %>
            </div>
          </div>
        </div>
        <div class="">
          <a href="#" class="btn btn-light me-3" data-bs-toggle="modal" data-bs-target="#add_pod_modal">Add Pod</button>
          <a href="#" class="btn btn-light me-3" data-bs-toggle="modal" data-bs-target="#edit_location_modal_<%= location.id %>">Edit Location</a>
          <a href="<%= location_measurements_path(location) %>" class="btn btn-primary me-3">View Measurements</a>
        </div>
      </div>
    <!--end::Card title-->
    <div class="card-body pt-0 d-flex flex-row justify-content-between">
      <div class="location-data" style="width: 40%;">
        <div class="location-data--row d-flex flex-row align-items-center justify-content-between">
          <div class="fw-bolder w-50 mb-10">Latitude</div>
          <div class="text-start w-50 mb-10" style="color: #5e6278; font-size: 14px;"><%= location.latitude %></div>
        </div>
        <div class="location-data--row d-flex flex-row align-items-center justify-content-between">
          <div class="fw-bolder w-50 mb-10">Longitude</div>
          <div class="text-start w-50 mb-10" style="color: #5e6278; font-size: 14px;"><%= location.longitude %></div>
        </div>
        <div class="location-data--row d-flex flex-row align-items-center justify-content-between">
          <div class="fw-bolder w-50 mb-10">Current Pods</div>
          <div class="text-start w-50 mb-10" style="color: #5e6278; font-size: 14px;"><%= location.clients.length %></div>
        </div>
        <div class="location-data--row d-flex flex-row align-items-center justify-content-between">
          <div class="fw-bolder w-50 mb-10">Expected MBPS Upload</div>
          <div class="text-start w-50 mb-10" style="color: #5e6278; font-size: 14px;"><%= location.expected_mbps_up ? location.expected_mbps_up : 'N/A'%></div>
        </div>
        <div class="location-data--row d-flex flex-row align-items-center justify-content-between">
          <div class="fw-bolder w-50 mb-10">Expected MBPS Download</div>
          <div class="text-start w-50 mb-10" style="color: #5e6278; font-size: 14px;"><%= location.expected_mbps_down ? location.expected_mbps_down : 'N/A'%></div>
        </div>
      </div>
      <div class="map-container" style="width: 450px;">
        <div style="height:300px;" data-location-form-target="map" data-action="modal:shown->location#display" data-controller="location" data-location-latitude-value="<%= location.latitude %>" data-location-longitude-value="<%= location.longitude %>"></div>
      </div>
    </div>
  <!--end::Card body-->
</div>
