<div class="cards--card-with-header">
  <div class="cards--card-header">
    <span>Network</span>
  </div>
  <div class="cards--card-with-header-content-container">
    <div class="cards--info-row-full-width mb-4">
      <label class="forms--label">MAC address (Ethernet)</label>
      <span class="cards--info-row-value <%= pod.has_ethernet_interface? ? 'regular-text' : 'additional-text' %>">
        <%= pod.get_ethernet_mac_address %>
      </span>
    </div>
    <div class="cards--info-row-full-width mb-4">
      <label class="forms--label">MAC address (Wi-Fi)</label>
      <span class="cards--info-row-value <%= pod.has_wifi_interface? ? 'regular-text' : 'additional-text' %>">
        <%= pod.get_wifi_mac_address %>
      </span>
    </div>
    <div class="cards--info-row-full-width mb-4">
      <label class="forms--label">Active connection(s)</label>
      <span class="cards--info-row-value <%= pod.active_connections.nil? ? 'additional-text' : 'regular-text' %>">
        <%= pod.active_connections %>
      </span>
    </div>
    <div class="cards--info-row-full-width mb-4">
      <label class="forms--label">Public IP address</label>
      <span class="cards--info-row-value <%= pod.ip.nil? ? 'additional-text' : 'regular-text' %>">
        <%= pod.ip.nil? ? 'Not available' : pod.ip %>
      </span>
    </div>
    <div class="cards--info-row-full-width mb-4">
      <label class="forms--label">Internet provider</label>
      <span class="cards--info-row-value <%= pod.location&.latest_measurement&.autonomous_system.nil? ? 'additional-text' : 'regular-text' %>">
        <%= pod.location&.latest_measurement&.autonomous_system.nil? ? "Not available" : pod.location.latest_measurement.autonomous_system.autonomous_system_org.name %>
      </span>
    </div>
  </div>
</div>