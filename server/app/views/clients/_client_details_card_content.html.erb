<!--begin::Card header-->
<div class="card-header align-items-center" style="height: 65px">
  <div class="fw-bolder mb-0" style="font-size: 20px; color: #3f4254">Overview</div>
</div>
<!--begin::Card title-->
<div class="card-title-container d-flex flex-row justify-content-between align-items-center"
     style="height: 90px;padding-left: 30px;padding-right: 30px;margin-top: 20px;margin-bottom: 50px;"
     id="client_<%= client.id %>_details<% small ? '_small' : ''%>"
>
  <div class="card-title--wrapper d-flex flow-row align-items-center">
    <div class="card-title--icon d-flex align-items-center justify-content-center"
         style="height: 90px; width: 90px; background-color: #f1faff; border-radius: 50%; margin-right: 20px">
        <span class="svg-icon svg-icon-4x svg-icon-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M12.4409 22C13.5455 22 14.4409 21.1046 14.4409 20C14.4409 18.8954 13.5455 18 12.4409 18C11.3364 18 10.4409 18.8954 10.4409 20C10.4409 21.1046 11.3364 22 12.4409 22Z" fill="black"/>
          <path opacity="0.3" d="M9.04095 14.8L9.94095 16.1C10.6409 15.6 11.5409 15.3 12.4409 15.3C13.3409 15.3 14.2409 15.6 14.9409 16.1L15.8409 14.8C16.1409 14.3 16.0409 13.6 15.4409 13.4C14.5409 13 13.5409 12.7 12.4409 12.7C11.3409 12.7 10.3409 12.9 9.44095 13.4C8.84095 13.6 8.74095 14.3 9.04095 14.8Z" fill="black"/>
          <path opacity="0.3" d="M3.14096 5.80005L4.04095 7.19995C6.44095 5.59995 9.34094 4.69995 12.4409 4.69995C15.5409 4.69995 18.4409 5.59995 20.8409 7.19995L21.7409 5.80005C22.0409 5.30005 21.8409 4.70002 21.3409 4.40002C18.7409 2.90002 15.6409 2 12.4409 2C9.24094 2 6.14095 2.90002 3.54095 4.40002C3.04095 4.70002 2.84096 5.30005 3.14096 5.80005Z" fill="black"/>
          <path opacity="0.3" d="M6.14097 10.3L7.04096 11.7C8.64096 10.7 10.441 10.1 12.541 10.1C14.641 10.1 16.441 10.7 18.041 11.7L18.941 10.3C19.241 9.80005 19.141 9.10002 18.541 8.90002C16.741 7.90002 14.741 7.40002 12.541 7.40002C10.341 7.40002 8.34096 7.90002 6.54096 8.90002C5.94096 9.10002 5.74097 9.80005 6.14097 10.3Z" fill="black"/>
        </svg>
      </span>
    </div>
    <div class="card-title--title-content">
      <p class="fw-bolder" style="margin: 0 0 5px 0; font-size: 19px;" id="client_<%= client.id %>_name<%= small ? '_small' : ''%>">
        <%= client.name.present? ? client.name : "Unnamed Pod" %>
      </p>
      <div style="margin-bottom: 10px;color: #b5b5c3;font-size: 14px;">
        <%= client.unix_user %>
      </div>
      <div style="font-size: 14px;"
           id="client_<%= client.id %>_status_wrapper<%= small ? '_small' : ''%>"
      >
        <% unless client.in_service? %>
          <span class="badge badge-light-dark" id="client_<%= client.id %>_in_service<%= small ? '_small' : ''%>">Not in service</span>
        <% end %>
        <span class="badge <%= client.status_style %>" id="client_<%= client.id %>_status<%= small ? '_small' : ''%>"><%= client.status %></span>
        <% if client.has_pending_test %>
          <span class="badge badge-light-primary" id="client_<%= client.id %>_status_pending<%= small ? '_small' : ''%>">Pending test</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex flex-row flex-wrap justify-content-evenly">
    <div class="actions-menu d-lg-block d-xl-none" style="width:max-content">
      <a href="#" class="btn btn-light btn-active-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
        Actions
        <span class="svg-icon svg-icon-5 m-0">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="black"></path>
            </svg>
          </span>
      </a>
      <div class="menu menu-sub menu-sub-dropdown menu-rounded menu-gray-600 menu-state-bg-light-primary"
           style="width: inherit"
           data-kt-menu="true"
           data-controller="menu">
        <div class="menu-item">
          <%= link_to "Edit Pod", edit_client_path(@client.unix_user), { class: "menu-link p-5", data: { "turbo-frame" => "edit_client_modal" } } %>
        </div>
        <div class="menu-item">
          <a href="<%= client_measurements_path(@client.unix_user) %>" class="menu-link p-5">View Measurements</a>
        </div>
        <div class="menu-item">
          <%= link_to "Run Test", run_test_client_path(@client.unix_user), method: :post, class: "menu-link p-5 #{@client.test_requested ? "disabled" : ""}" %>
        </div>
        <% if current_user.super_user %>
          <%= link_to "Print Label", pdf_label_client_path(@client.unix_user, format: :pdf), { class: "menu-link p-5", target: "_blank" } %>
        <% end %>
        <div class="menu-item">
          <%= link_to "#{client.get_in_service_action_label}", toggle_in_service_client_path(client.unix_user), method: :post, class: "menu-link p-5" %>
        </div>
      </div>
    </div>
    <% if current_user.super_user %>
      <%= link_to "Print Label", pdf_label_client_path(@client.unix_user, format: :pdf), { class: "btn btn-light me-3 d-md-none d-xl-block", target: "_blank" } %>
    <% end %>
    <%= link_to "Edit Pod", edit_client_path(@client.unix_user), { class: "btn btn-light-primary me-3 d-md-none d-xl-block", data: { "turbo-frame" => "edit_client_modal" } } %>
    <a href="<%= client_measurements_path(@client.unix_user) %>" class="btn btn-light-primary me-3 d-md-none d-xl-block">View Measurements</a>
    <%= link_to "#{client.get_in_service_action_label}", toggle_in_service_client_path(client.unix_user), method: :post, class: "btn btn-light-primary me-3 d-md-none d-xl-block" %>
    <%= link_to "Run Test", run_test_client_path(@client.unix_user), method: :post, class: "btn btn-primary #{@client.test_requested ? "disabled" : ""} d-md-none d-xl-block" %>
  </div>
</div>
<!--end::Card title-->
<!--end::Card header-->
<!--begin::Card body-->
<div class="card-body pt-0 d-flex flex-row">
  <div class="client-data" style="width: 100%">
    <% if current_user.super_user %>
      <div class="location-data--row mb-6 d-flex flex-row align-items-center justify-content-between flex-wrap">
        <div class="fw-bolder" style="width: 25%; min-width: 130px">Account</div>
        <div class="fw-bold d-flex flex-row" style="width: 75%; color: #5e6278; font-size: 14px">
          <%= client.account.name %>
        </div>
      </div>
    <% end %>
    <div class="location-data--row mb-6 d-flex flex-row align-items-center justify-content-between flex-wrap">
      <div class="fw-bolder" style="width: 25%; min-width: 130px">Location</div>
      <div class="fw-bold d-flex flex-row" style="width: 75%; color: #5e6278; font-size: 14px">
        <% if client.location != nil %>
          <%= link_to client.location.name, location_path(client.location) %>
        <% else %>
          Not Specified
        <% end %>
      </div>
    </div>
    <div class="location-data--row mb-6 d-flex flex-row align-items-center justify-content-between flex-wrap">
      <div class="fw-bolder" style="width: 25%; min-width: 130px">Added on</div>
      <div class="fw-bold d-flex flex-row" style="width: 75%; color: #5e6278; font-size: 14px">
        <%= pretty_print_date(client.created_at) %>
      </div>
    </div>
    <div class="location-data--row mb-6 d-flex flex-row align-items-center justify-content-between flex-wrap">
      <div class="fw-bolder" style="width: 25%; min-width: 130px">Total tests</div>
      <div class="fw-bold d-flex flex-row" style="width: 75%; color: #5e6278; font-size: 14px">
        <%= policy_scope(client.measurements).size %>
      </div>
    </div>
    <div class="location-data--row mb-6 d-flex flex-row align-items-center justify-content-between flex-wrap">
      <div class="fw-bolder" style="width: 25%; min-width: 130px">Data Cap</div>
      <div class="fw-bold d-flex flex-row" style="width: 75%; color: #5e6278; font-size: 14px; <%= client.data_cap_max_usage.nil? ? "color: #b5b5c3;" : "" %>">
        <%= client.data_cap_max_usage.nil? ? "Disabled" : "#{(client.data_cap_max_usage / (1024**2)).round(0)} MB per #{client.get_periodicity_period}" %>
      </div>
    </div>
    <div class="location-data--row mb-6 d-flex flex-row align-items-center justify-content-between flex-wrap">
      <div class="fw-bolder" style="width: 25%; min-width: 130px"><%= client.data_cap_periodicity.capitalize() %> Usage</div>
      <div class="fw-bold d-flex flex-row" style="width: 75%; color: #5e6278; font-size: 14px;">
        <% if client.data_cap_max_usage.nil?%>
          <%= client.data_cap_current_period_usage.nil? ? "N/A" : "#{(client.data_cap_current_period_usage / (1024**2)).round(0)} MB" %>
        <% else %>
          <div class="d-flex flex-row align-items-center justify-content-center">
            <div class="w-100px h-5px d-flex justify-content-start align-items-center" style="border-radius: 6.5px; background-color: #e7f6ff">
              <div class="h-5px" style="width: <%= "#{client.get_data_cap_percentage_usage}%" %>; background-color: #00a3ff; border-radius: 5px"></div>
            </div>
            <p class="ms-3 mt-0 mb-0 me-0"><%= "#{(client.data_cap_current_period_usage / (1024**2)).round(0)} MB (#{client.get_data_cap_percentage_usage}% used)" %></p>
          </div>
        <% end %>
      </div>
    </div>
    <div class="location-data--row mb-6 d-flex flex-row align-items-center justify-content-between flex-wrap">
      <div class="fw-bolder" style="width: 25%; min-width: 130px">Custom Scheduling</div>
      <div class="fw-bold d-flex flex-row" style="width: 75%; color: #5e6278; font-size: 14px; <%= !client.custom_scheduling ? "color: #b5b5c3;" : "" %>">
        <%= !client.custom_scheduling ? "Disabled" : client.get_scheduling_periodicity_string %>
      </div>
    </div>
    <div class="location-data--row mb-6 d-flex flex-nowrap flex-row align-items-start justify-content-between flex-wrap">
      <div class="fw-bolder" style="width: 25%; min-width: 130px; max-width: 200px">Last Measurement</div>
      <div class="d-flex flex-column align-items-start justify-content-start" style="width: 75%; font-size: 14px; <%= client.latest_measurement.nil? ? "color: #b5b5c3;" : "" %>">
        <p class="fw-bold mb-2" style="color: #5e6278"><%= client.latest_measurement.nil? ? "N/A" : pretty_print_date(client.latest_measurement.created_at) %></p>
        <% if client.latest_measurement.present? %>
          <div class="d-flex flex-row align-items-center justify-content-start">
            <div class="d-flex flex-row align-items-center justify-content-center me-3">
              <img class="me-1" alt="download icon" src="<%= image_url('download-icon.png')%>" width="12" height="12">
              <p class="m-0 fw-bold" style="color: #5e6278"><%= client.latest_measurement.download.round(2) %> Mbps</p>
            </div>
            <div class="d-flex flex-row align-items-center justify-content-center">
              <img class="me-1" alt="upload icon" src="<%= image_url('upload-icon.png')%>" width="12" height="12">
              <p class="m-0 fw-bold" style="color: #5e6278"><%= client.latest_measurement.upload.round(2) %> Mbps</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!--end::Card body-->