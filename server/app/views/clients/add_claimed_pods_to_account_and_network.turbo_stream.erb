<% if @moving_pods_count > 0 %>
  <% turbo_frame_tag = @onboarding ? 'ftue_modal' : 'add_pod_modal' %>
  <%= turbo_stream.update turbo_frame_tag do %>
    <%= render partial: "application/components/modals/empty_custom_modal",
               locals: {
                 modal_title: "Add a pod",
                 modal_partial_path: "pods/modals/add_pod/confirm_moving_claimed_pods",
                 custom_submit_end_handler: nil,
                 resource: nil,
               }
    %>
  <% end %>
<% else %>
  <%= render partial: 'pods/modals/add_pod/on_pods_added' %>
<% end %>