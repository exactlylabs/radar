<div class="card w-100" style="height:max-content; margin: 20px auto;">
  <!--begin::Card body-->
  <div class="card-body pt-0 px-0">
    <!--begin::Table-->
    <div id="kt_customers_table_wrapper" class="dataTables_wrapper dt-bootstrap4">
      <div class="table-responsive">
        <table class="table table-row-bordered align-middle fs-6 gy-5 dataTable
								no-footer table-rounded" id="kt_customers_table">
          <!--begin::Table head-->
          <thead>
          <!--begin::Table row-->
          <tr class="text-start fw-bolder gs-0"
              style="font-size: 12px; height: 65px">
            <th class="fw-bold ps-10" style="width: 20vw; color: #b5b5c3; font-size: 12px; letter-spacing: 0.36px" tabindex="0" aria-controls="kt_customers_table" colspan="1" rowspan="1"
                aria-label="Pod Name">NAME</th>
            <th class="fw-bold"
                style="width: 23vw; color: #b5b5c3; font-size: 12px; letter-spacing: 0.36px"
                tabindex="0"
                aria-controls="kt_customers_table"
                aria-sort="ascending"
                colspan="1"
                rowspan="1"
                aria-label="Pod Name">ACCOUNT</th>
            <th class="fw-bold" style="width: 23vw; color: #b5b5c3; font-size: 12px; letter-spacing: 0.36px" tabindex="0" aria-controls="kt_customers_table" colspan="1" rowspan="1"
                aria-label="Status">ADDED</th>
            <th class="fw-bold" style="width: 23vw; color: #b5b5c3; font-size: 12px; letter-spacing: 0.36px" tabindex="0" aria-controls="kt_customers_table" colspan="1" rowspan="1"
                aria-label="Status">STATUS</th>
            <th class="text-end sorting_disabled" style="width: 23vw" colspan="1" rowspan="1" aria-label="Options"></th>
          </tr>
          <!--end::Table row-->
          </thead>
          <!--end::Table head-->
          <!--begin::Table body-->
          <tbody class="fw-bold text-gray-600">
            <% paginate_elements(clients, [], "LOWER(name) ASC").each do |client| %>
              <%= render partial: "clients_table_row", locals: { client: client }%>
            <% end %>
          </tbody>
          <!--end::Table body-->
        </table>
        <div class="d-flex flex-row justify-content-between align-items-center px-7 <%= clients.length == 1 ? "pt-15 pb-7" : "pt-10" %>">
          <%= pagination_footer %>
        </div>
      </div>
    </div>
    <!--end::Table-->
  </div>
  <!--end::Card body-->
</div>
<!--end::Card-->