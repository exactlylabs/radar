<div class="container-xxl" style="<%= clients.length == 0 ? 'max-width: 700px' : ''%>" id="clients_container_dynamic">
    <% if notice %>
      <%= render partial: "application/notice_alert", locals: {notice: notice} %>
    <% end %>
    <!--begin::Card-->
    <div class="card">
        <!--begin::Card body-->
        <div class="card-body pt-0">
        <% if clients.length > 0 %>
            <!--begin::Table-->
            <div id="kt_customers_table_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_customers_table">
                <!--begin::Table head-->
                <thead>
                    <!--begin::Table row-->
                    <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                    <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_customers_table" rowspan="1" colspan="1" aria-label="Pod ID" style="width: 132.146px;">Pod ID</th>
                    <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_customers_table" rowspan="1" colspan="1" aria-label="Location" style="width: 149.958px;">Location</th>
                    <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_customers_table" rowspan="1" colspan="1" aria-label="Status" style="width: 149.958px;">Status</th>
                    <th class="text-end min-w-70px sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 98.0417px;">Actions</th></tr>
                    <!--end::Table row-->
                </thead>
                <!--end::Table head-->
                <!--begin::Table body-->
                <tbody class="fw-bold text-gray-600" id="clients">
                    <% clients.order("LOWER(unix_user)").each do |client| %>
                    <%= render "client", client: client %>
                    <% end %>
                </tbody>
                    <!--end::Action=-->
                </tbody>
                <!--end::Table body-->
                </table>
            </div>
            </div>
            <!--end::Table-->
        <% else %>
            <div class="d-flex flex-column justify-content-center align-items-center text-center">
            <div class="d-flex justify-content-center align-items-center" 
                    style="margin: 50px auto 30px auto; border-radius: 50%; background-color: #f1faff; 
                        min-width: 60px; width: 60px; min-height: 60px; height: 60px;">
                <span class="svg-icon svg-icon-primary">
                <svg class="h-30px w-30px" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M12.4409 22C13.5455 22 14.4409 21.1046 14.4409 20C14.4409 18.8954 13.5455 18 12.4409 18C11.3364 18 10.4409 18.8954 10.4409 20C10.4409 21.1046 11.3364 22 12.4409 22Z" fill="black"/>
                    <path opacity="0.3" d="M9.04095 14.8L9.94095 16.1C10.6409 15.6 11.5409 15.3 12.4409 15.3C13.3409 15.3 14.2409 15.6 14.9409 16.1L15.8409 14.8C16.1409 14.3 16.0409 13.6 15.4409 13.4C14.5409 13 13.5409 12.7 12.4409 12.7C11.3409 12.7 10.3409 12.9 9.44095 13.4C8.84095 13.6 8.74095 14.3 9.04095 14.8Z" fill="black"/>
                    <path opacity="0.3" d="M3.14096 5.80005L4.04095 7.19995C6.44095 5.59995 9.34094 4.69995 12.4409 4.69995C15.5409 4.69995 18.4409 5.59995 20.8409 7.19995L21.7409 5.80005C22.0409 5.30005 21.8409 4.70002 21.3409 4.40002C18.7409 2.90002 15.6409 2 12.4409 2C9.24094 2 6.14095 2.90002 3.54095 4.40002C3.04095 4.70002 2.84096 5.30005 3.14096 5.80005Z" fill="black"/>
                    <path opacity="0.3" d="M6.14097 10.3L7.04096 11.7C8.64096 10.7 10.441 10.1 12.541 10.1C14.641 10.1 16.441 10.7 18.041 11.7L18.941 10.3C19.241 9.80005 19.141 9.10002 18.541 8.90002C16.741 7.90002 14.741 7.40002 12.541 7.40002C10.341 7.40002 8.34096 7.90002 6.54096 8.90002C5.94096 9.10002 5.74097 9.80005 6.14097 10.3Z" fill="black"/>
                </svg>
                </span>
            </div>
            <div class="fw-bolder" style="margin-bottom: 20px; font-size: 20px">You currently have no Pods set up.</div>
            <div style="max-width: 80%; margin-bottom: 30px; font-size: 14px; color: #b5b5c3">
                Pods keep connected to your Internet network and perform various tests throughout the day or at your request.
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add_pod_modal" style="margin-bottom: 50px">Add a Pod</button>
            </div>
        <% end %>
        </div>
        <!--end::Card body-->
    </div>
    <!--end::Card-->
</div>