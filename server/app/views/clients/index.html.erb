<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
  <div class="d-flex flex-stack flex-wrap flex-sm-nowrap">
    <!--begin::Info-->
    <div class="d-flex flex-column align-items-start justify-content-center flex-wrap me-2">
      <!--begin::Title-->
      <h1 class="page-main-title">Manage Pods
        <small class="text-muted fs-6 fw-normal ms-1"></small></h1>
      <!--end::Title-->
      <!--begin::Breadcrumb-->
      <ul class="breadcrumb fw-bold fs-base my-1">
        <li class="breadcrumb-item page-sub-title"><%= current_account.name %></li>
        <% if FeatureFlagHelper.is_available('networks', current_user) %>
          <li class="breadcrumb-item page-sub-title">Networks</li>
        <% end %>
      </ul>
      <!--end::Breadcrumb-->
    </div>
    <!--end::Info-->
    <div class="pods--index-button-options-container">
      <% if FeatureFlagHelper.is_available('networks', current_user) %>
        <% if @clients.count >= 1 %>
          <a href="<%= get_add_pod_modal_path %>"
             class="custom-button custom-button--primary custom-button--lg"
             data-turbo-frame="add_pod_modal"
          >
            <%= image_tag image_url('white-plus.png'), width: 16, height: 16, class: 'me-2' %>
            Add Pod
          </a>
        <% end %>
        <%= render partial: "application/components/buttons/custom_more_options_button",
                   locals: {
                     type: TablesHelper::OptionsMenuType::PODS_INDEX,
                     with_bg: true,
                     big: true
                   }
        %>
      <% else %>
        <% if current_user.super_user && !is_super_user_disabled? %>
          <a href="<%= update_groups_path %>" class="custom-button custom-button--secondary-light custom-button--lg me-5">Manage
            Release Group</a>
        <% end %>
        <% if current_account.superaccount %>
          <a href="<%= unclaimed_clients_path %>" class="custom-button custom-button--secondary-light custom-button--lg me-5">Unclaimed
            Pods</a>
        <% end %>
        <button type="button" class="custom-button custom-button--primary custom-button--lg <%= current_account.nil? ? 'disabled' : '' %>" data-bs-toggle="modal" data-bs-target="#add_pod_modal_wizard">Add
          Pod
        </button>
      <% end %>
    </div>
  </div>
</div>
<!--end::Toolbar-->

<% if FeatureFlagHelper.is_available('networks', current_user) && are_there_unassigned_pods? %>
  <div id="unassigned-pods-banner" class="networks--unassigned-pods-banner">
    <%= image_tag image_url('warning-icon.png'), width: 20, height: 20 %>
    <div class="networks--unassigned-pods-banner-text-container">
      <% pod_count = policy_scope(Client).where(location: nil).count %>
      <span class="forms--label wrap">You have <%= pod_count %> pod<%= pod_count > 1 ? 's' : '' %> not assigned to any network.</span>
      <span class="additional-text wrap">Assign your pods to a network to get insights into your network's performance.</span>
    </div>
  </div>
<% end %>

<div class="post fs-6 d-flex flex-column-fluid" id="kt_post">
  <!--begin::Container-->
  <div id="clients-table-wrapper" class="d-flex flex-column w-100" data-controller="multi-row-table bulk-release-group-modal">
    <% if (empty_search_params? && @clients.length > 0) || (!empty_search_params?) %>
      <% if FeatureFlagHelper.is_available('networks', current_user) %>
        <%= render partial: "pods/components/table_filters" %>
      <% else %>
        <%= render partial: "clients_table_filters" %>
      <% end %>
    <% end %>
    <%= render partial: "clients_index_content", locals: { clients: @clients } %>
    <% if current_user.super_user && !is_super_user_disabled? %>
      <div class="modal fade" tabindex="-1" id="bulk_change_release_group" data-controller="modal" data-action="turbo:submit-end->modal#submit turbo:frame-render->modal#showModal">
        <%= render partial: "clients/bulk_change_release_group_modal" %>
      </div>
    <% end %>
  </div>
  <!--end::Container-->
</div>

<% if FeatureFlagHelper.is_available('networks', current_user) %>
  <%= render partial: "application/components/modals/turbo_modal",
             locals: { turbo_frame_tag_id: "add_pod_modal", optional_added_controllers: "pod-id-step" }
  %>

  <%= render partial: "application/components/modals/turbo_modal",
             locals: { turbo_frame_tag_id: "pod_id_modal" }
  %>

  <%= render partial: "application/components/modals/turbo_modal",
             locals: {
               turbo_frame_tag_id: "bulk_move_to_account_modal",
               optional_added_controllers: "multi-pod-select selected-pods-grid qr",
               needs_overflow: true
             }
  %>
  <%= render partial: "application/components/modals/turbo_modal",
             locals: {
               turbo_frame_tag_id: "bulk_move_to_network_qr_modal",
               optional_added_controllers: "multi-pod-select selected-pods-grid qr",
               needs_overflow: true
             }
  %>
<% else %>
  <div class="modal fade" tabindex="-1" id="add_pod_modal_wizard" data-controller="modal add-pod" data-action="turbo:submit-end->add-pod#handleSubmitEnd">
    <%= turbo_frame_tag "add_pod_modal", src: claim_clients_path(setup: params[:setup], unix_user: params[:unix_user]) do %>
    <% end %>
  </div>
<% end %>

<div class="modal fade" tabindex="-1" id="edit_pod_modal" data-controller="modal" data-action="turbo:submit-end->modal#submit turbo:frame-render->modal#showModal">
  <%= turbo_frame_tag "edit_client_modal", target: "add_pod_step_2", modal_target: "new_location_modal-edit" do %>
  <% end %>
</div>

<div class="modal fade" tabindex="-1" id="new_location_modal" data-controller="add-pod categories" data-action="turbo:submit-start->add-pod#handleSubmitStart turbo:submit-end->add-pod#handleNewLocationFromClientModal">
  <%= turbo_frame_tag "new_location_modal", src: new_location_path(data_target: "create-pod-modal", modal_target: "add_pod_modal_wizard") do %>
  <% end %>
</div>

<div class="modal fade" tabindex="-1" id="new_location_modal-edit" data-controller="edit-pod categories" data-action="turbo:submit-start->edit-pod#handleSubmitStart turbo:submit-end->edit-pod#handleNewLocationFromClientModal">
  <%= turbo_frame_tag "new_location_modal", src: new_location_path(data_target: "edit-pod-modal", modal_target: "edit_pod_modal") do %>
  <% end %>
</div>