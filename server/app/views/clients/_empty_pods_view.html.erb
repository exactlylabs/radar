      <div class="dialog-main-title mb-2">
        <% if empty_search_params? %>
          <%= "You currently have no Pods set up." %>
        <% else %>
          <%= "No Pods match that criteria." %>
        <% end %>
      </div>
      <div class="additional-text w-75 text-center text-wrap mb-6 wrap">
        <% if empty_search_params? %>
          <%= "Pods keep connected to your Internet network and perform various tests throughout the day or at your request."%>
        <% else %>
          <%= "Check your filters or try a different combination."%>
        <% end %>
      </div>
      <% if empty_search_params? %>
        <button type="button" class="custom-button custom-button--lg custom-button--primary <%= current_account.nil? ? 'custom-button--disabled disabled' : '' %>" data-bs-toggle="modal" data-bs-target="#add_pod_modal_wizard">Add a Pod</button>
      <% else %>
        <%= link_to "Clear filters", clients_path, class: "custom-button custom-button--lg custom-button--primary" %>
      <% end %>
    </div>
  </div>
</div>
