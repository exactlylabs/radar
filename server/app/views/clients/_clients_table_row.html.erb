<tr id="<%= dom_id(client) %>">
  <td style="padding-left: 30px">
    <div class="d-flex flex-row align-items-center">
      <div class="d-flex align-items-center justify-content-center me-5" 
           style="border-radius:50%; background-color:<%= client.status == 'Active' || client.status == 'Test running' ? '#f1faff' : '#f8f8f8' %>; min-width: 36px; width: 36px; min-height: 36px; height: 36px">
        <span class="svg-icon svg-icon-2 <%= client.status == 'Active' || client.status == 'Test running' ? 'svg-icon-primary' : 'svg-icon-muted' %>" style="position: relative;">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">          
              <path d="M12.4409 22C13.5455 22 14.4409 21.1046 14.4409 20C14.4409 18.8954 13.5455 18 12.4409 18C11.3364 18 10.4409 18.8954 10.4409 20C10.4409 21.1046 11.3364 22 12.4409 22Z" fill="black"/>
              <path opacity="0.3" d="M9.04095 14.8L9.94095 16.1C10.6409 15.6 11.5409 15.3 12.4409 15.3C13.3409 15.3 14.2409 15.6 14.9409 16.1L15.8409 14.8C16.1409 14.3 16.0409 13.6 15.4409 13.4C14.5409 13 13.5409 12.7 12.4409 12.7C11.3409 12.7 10.3409 12.9 9.44095 13.4C8.84095 13.6 8.74095 14.3 9.04095 14.8Z" fill="black"/>
              <path opacity="0.3" d="M3.14096 5.80005L4.04095 7.19995C6.44095 5.59995 9.34094 4.69995 12.4409 4.69995C15.5409 4.69995 18.4409 5.59995 20.8409 7.19995L21.7409 5.80005C22.0409 5.30005 21.8409 4.70002 21.3409 4.40002C18.7409 2.90002 15.6409 2 12.4409 2C9.24094 2 6.14095 2.90002 3.54095 4.40002C3.04095 4.70002 2.84096 5.30005 3.14096 5.80005Z" fill="black"/>
              <path opacity="0.3" d="M6.14097 10.3L7.04096 11.7C8.64096 10.7 10.441 10.1 12.541 10.1C14.641 10.1 16.441 10.7 18.041 11.7L18.941 10.3C19.241 9.80005 19.141 9.10002 18.541 8.90002C16.741 7.90002 14.741 7.40002 12.541 7.40002C10.341 7.40002 8.34096 7.90002 6.54096 8.90002C5.94096 9.10002 5.74097 9.80005 6.14097 10.3Z" fill="black"/>
            </svg>
        </span>
      </div>
      <div class="pod-name--container">
        <a class="text-hover-primary fw-bold"
            style="font-size:15px; color: #3f4254; max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;"
            href="<%= client_path(client.unix_user)%>" data-turbo-frame="_top">
            <%= client.name.present? ? client.name : "Unnamed Pod" %>
        </a>
        <div class="pod-name--subtitle" style="font-size: 13px; color: #b5b5c3;">
            <%= client.unix_user %>
        </div>
      </div>
    </div>
  </td>
  <% if current_user.super_user %>
    <td class="mb-1"
        style="font-size:15px; color: #5e6278; max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
      <%= client.account.name %>
    </td>
    <td class="mb-1"
        style="font-size:15px; color: #5e6278; max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
      <%= client.staging ? "Staging" : "Live" %>
    </td>
    <td class="mb-1"
        style="font-size:15px; color: #5e6278; max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
      <%= client.update_group_id.present? ? UpdateGroup.find(client.update_group_id).name : "N/A" %>
    </td>
  <% end %>
  <td class="mb-1"
      style="font-size:15px; color: #5e6278; max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
      <%= pretty_print_date(client.created_at) %>
  </td>
  <td class="mb-1"
      style="font-size:15px; color: #5e6278; max-width: 15vw;text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
    <span class="badge <%= client.status_style %>"><%= client.status %></span>
    <% if client.has_pending_test %>
      <span class="badge badge-light-primary">Pending test</span>
    <% end %>
  </td>
  <td class="text-end" style="padding-right: 30px">
    <div class="btn-group dropend">
      <button  type="button"
               class="btn btn-sm btn-light btn-active-light-primary dropwdown-toggle"
               data-bs-toggle="dropdown"
               aria-expanded="false"
               style="border-radius: 6px; display: flex; justify-content: center; align-items: center"
               id="<%= "options-button-#{client.id}" %>"
      >
        <span class="svg-icon svg-icon-5 m-0">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M11.2657 11.4343L15.45 7.25C15.8642 6.83579 15.8642 6.16421 15.45 5.75C15.0358 5.33579 14.3642 5.33579 13.95 5.75L8.40712 11.2929C8.01659 11.6834 8.01659 12.3166 8.40712 12.7071L13.95 18.25C14.3642 18.6642 15.0358 18.6642 15.45 18.25C15.8642 17.8358 15.8642 17.1642 15.45 16.75L11.2657 12.5657C10.9533 12.2533 10.9533 11.7467 11.2657 11.4343Z" fill="currentColor"/>
          </svg>
        </span>
        Options
      </button>
      <div class="dropdown-menu fw-bold fs-7 dropdown-menu-start"
           aria-labelledby="<%= "options-button-#{client.id}" %>"
           style="min-width: 90px; width: max-content; height: max-content"
      >
        <% if current_user.super_user && client.staging %>
          <div class="menu-item">
            <%= link_to "Mark as Live", unstage_client_path(client.unix_user), method: :post, class: "menu-link text-hover-gray-500 text-gray-700 px-3 py-2" %>
          </div>
        <% end %>
        <div class="menu-item">
          <%= link_to "Run Test", run_test_client_path(client.unix_user), method: :post, class: "menu-link text-hover-gray-500 text-gray-700 px-3 py-2" %>
        </div>
        <!--begin::Menu item-->
        <div class="menu-item">
          <%= link_to "View", client_path(client.unix_user), { class: "menu-link text-hover-gray-500 text-gray-700 px-3 py-2" } %>
        </div>
        <!--end::Menu item-->
        <!--begin::Menu item-->
        <div class="menu-item">
          <%= link_to "Edit", edit_client_path(client.unix_user), { class: "menu-link text-hover-gray-500 text-gray-700 px-3 py-2", data: { "turbo-frame" => "edit_client_modal" } } %>
        </div>
        <!--end::Menu item-->
        <% if current_user.super_user %>
        <!--begin::Menu item-->
        <div class="menu-item">
          <%= link_to "Print Label", pdf_label_client_path(client.unix_user, format: :pdf), { class: "menu-link text-hover-gray-500 text-gray-700 px-3", target: "_blank" } %>
        </div>
        <!--end::Menu item-->
        <% end %>
        <!--begin::Menu item-->
        <div class="menu-item">
          <%= link_to 'Delete', release_client_path(client.unix_user), method: :delete, data: { confirm: 'Are you sure?' }, class: "menu-link text-hover-gray-500 text-gray-700 px-3 py-2" %>
        </div>
        <!--end::Menu item-->
      </div>
    </div>
  </td>
</tr>