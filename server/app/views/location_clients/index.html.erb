<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
  <div class="d-flex flex-stack flex-wrap flex-sm-nowrap">
    <!--begin::Info-->
    <div class="d-flex flex-column align-items-start justify-content-center flex-wrap me-2">
      <!--begin::Title-->
      <h1 class="page-main-title"><%= @location.name.present? ? @location.name : "Unnamed Location" %> 
      <small class="text-muted fs-6 fw-normal ms-1"></small></h1>
      <!--end::Title-->
      <!--begin::Breadcrumb-->
      <ul class="breadcrumb fw-bold fs-base my-1">
        <li class="breadcrumb-item page-sub-title"><%= current_account.name %>
          <!--<a href="/craft/index.html" class="text-muted text-hover-primary">Home</a>-->
        </li>
        <li class="breadcrumb-item page-sub-title">Locations</li>
      </ul>
      <!--end::Breadcrumb-->
    </div>
    <!--end::Info-->
    <% if FeatureFlagHelper.is_available('networks', current_user) %>
      <a href="<%= get_add_pod_to_network_modal_path %>"
        data-turbo-frame="add_pod_to_network_modal"
        class="custom-button custom-button--primary custom-button--lg"
      >
        <%= image_tag image_url('white-plus.png'), width: 16, height: 16, class: "me-2" %>
        Add pod
      </a>
    <% end %>
  </div>
</div>
<!--end::Toolbar-->
<div class="post fs-6 d-flex flex-column-fluid justify-content-center" id="kt_post">
  <!--begin::Container-->
  <div class="clients--details-container" data-controller="multi-row-table">
    <!--begin::OptionsCard-->
    <%= render partial: "application/components/tabs/page_tabs",
      locals: {
        tabs: [
          { text: 'Overview', path: location_path(@location) },
          { text: 'Pods', path: location_clients_path(@location.id) },
          { text: 'Measurements', path: location_measurements_path(@location.id) },
        ]
      }
    %>
    <!--end::OptionsCard-->
    <!--begin::Card-->
    <% if FeatureFlagHelper.is_available('networks', current_user) %>
      <%= turbo_frame_tag "network_pods_table_container" do %>
        <% if @clients.count == 0 && request.query_parameters.size == 0 %>
          <%= render partial: "network_pods/components/empty_pods_card", locals: { network: @location } %>
        <% else %>
          <%= render partial: "network_pods/components/table_filters", locals: { network: @location } %>
          <%= render partial: "application/components/tables/generic_table",
              locals: {
                table_id: "network_pods_table",
                type: TablesHelper::TableTypes::NETWORK_PODS,
                titles: TablesHelper.titles(TablesHelper::TableTypes::NETWORK_PODS),
                widths: TablesHelper.widths(TablesHelper::TableTypes::NETWORK_PODS),
                rows: @clients,
                total: @total
              }
          %>
        <% end %>
      <% end %>
      <%= render partial: "application/components/modals/turbo_modal",
          locals: { turbo_frame_tag_id: "bulk_remove_from_network_modal" }
      %>
      <%= render partial: "application/components/modals/turbo_modal",
          locals: { turbo_frame_tag_id: "bulk_change_release_group_modal" }
      %>
      <%= render partial: "application/components/modals/turbo_modal",
          locals: { turbo_frame_tag_id: "bulk_move_to_network_modal" }
      %>
      <%= render partial: "application/components/modals/turbo_modal",
          locals: { turbo_frame_tag_id: "add_pod_to_network_modal", optional_added_controllers: "add-pod-to-network pod-id-step" }
      %>
    <% else %>
      <%= render partial: "location_clients_table", locals: { clients: @clients } %>
    <% end %>
  </div>
  <!--end::Container-->
</div>

<div class="modal fade" tabindex="-1" id="add_pod_modal_wizard" data-controller="modal add-pod" data-action="turbo:submit-end->modal#submit">
  <%= turbo_frame_tag "add_pod_modal", src: claim_clients_path(location_id: @location.id) do %>
  <% end %>
</div>

<div class="modal fade" tabindex="-1" id="add_pod_modal_step_0" data-controller="add-client-to-location">
    <%= render partial: 'add_pod_step_0', locals: { location: @location } %>
</div>

<div class="modal fade" tabindex="-1" id="add_pod_step_1_existing">
    <%= render partial: 'add_pod_step_1_existing', locals: { location: @location } %>
</div>

<div class="modal fade" tabindex="-1" id="add_pod_step_2_existing">
    <%= render partial: 'add_pod_step_2_existing', locals: { location: @location } %>
</div>

<div class="modal fade" tabindex="-1" id="edit_pod_modal" data-controller="modal" data-action="turbo:submit-end->modal#submit turbo:frame-render->modal#showModal">
  <%= turbo_frame_tag "edit_client_modal", target: "add_pod_step_2", modal_target: "new_location_modal-edit" do %>
  <% end %>
</div>

<%= render partial: "application/components/modals/turbo_modal",
  locals: { turbo_frame_tag_id: "bulk_remove_from_network_modal" }
%>

<div class="modal fade" tabindex="-1" id="pod_id_modal" data-controller="modal" data-action="turbo:frame-render->modal#showModal">
  <%= render partial: "public_pod/pod_id_modal" %>
</div>