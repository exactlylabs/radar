<div class="card" style="width: 90%; height:max-content">
        <!--begin::Card body-->
        <div class="card-body pt-0 px-0">
            <!--begin::Table-->
            <div id="kt_customers_table_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="table-responsive">
                    <table class="table table-row-bordered align-middle fs-6 gy-5 dataTable 
                            no-footer table-rounded" id="kt_customers_table">
                        <!--begin::Table head-->
                        <thead>
                            <tr class="text-start fs-1 fw-bolder">
                                <th class="py-7 ps-10 d-flex flex-column dialog-main-title">
                                    Pods
                                    <span class="additional-text"><%= clients.length %> total pods</span>
                                </th>
                                <th></th>
                                <th class="text-center" style="display: table-cell; vertical-align: middle">
                                    <button type="button" class="custom-button custom-button--primary custom-button--lg w-100" data-bs-toggle="modal" data-bs-target="#add_pod_modal_step_0">Add Pod</button>
                                </th>
                            </tr>
                            <!--begin::Table row-->
                            <tr class="text-start fw-bolder gs-0" 
                                style="background-color: rgba(245, 248, 250, 0.6);font-size: 15px;">
                                <th class="tables--title sorting ps-10" style="width: 20vw" tabindex="0" aria-controls="kt_customers_table" 
                                    aria-label="Pod Name">Pod Name</th>
                                <th class="tables--title sorting" style="width: 68vw" tabindex="0" aria-controls="kt_customers_table" 
                                    aria-label="Status">Status</th>
                                <th class="text-end sorting_disabled" style="width: 12vw" aria-label="Actions"></th>
                            </tr>
                            <!--end::Table row-->
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody class="fw-bold text-gray-600" id="location_clients_table">
                            <% clients.order("LOWER(name)").each do |client| %>
                                <%= render partial: "location_clients_table_row", locals: { client: client }%>
                            <% end %>
                        </tbody>
                        <!--end::Table body-->
                    </table>
                </div>
            </div>
            <!--end::Table-->
        </div>
        <!--end::Card body-->
    </div>  
    <!--end::Card-->