<div class="application--cell-icon-text-container">
  <%= image_tag image_url('network-small-icon.png'), width: 16, height: 16, class: "me-2" %>
  <% if pod.location.present? %>
    <a href="<%= location_path(pod.location)%>" class="regular-link"><%= pod.location.name %></a>
  <% else %>
    <span class="additional-text">Not available</span>
  <% end %>
</div>