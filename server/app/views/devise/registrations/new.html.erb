<div class="d-flex flex-center flex-column flex-column-fluid">
  <!--begin::Wrapper-->
  <div class="w-lg-600px p-10 p-lg-15 mx-auto">
    <!--begin::Form-->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form w-100 fv-plugins-bootstrap5 fv-plugins-framework', novalidate: true, 'data-turbo' => 'false'}) do |f| %>
    <!--<form class="" novalidate="novalidate" id="kt_sign_up_form">-->
      <!--begin::Heading-->
      <div class="mb-10 text-center">
        <!--begin::Title-->
        <h1 class="text-dark mb-3">Create an Account</h1>
        <!--end::Title-->
        <!--begin::Link-->
        <div class="text-gray-400 fw-bold fs-4">Already have an account?
        <%= link_to "Sign in here", new_session_path(resource_name), class: "link-primary fw-bolder" %>
        </div>
        <!--end::Link-->
      </div>
      <!--end::Heading-->
      <!--begin::Input group-->
      <div class="row fv-row mb-7 fv-plugins-icon-container">
        <!--begin::Col-->
        <div class="col-xl-6">
          <label class="form-label fw-bolder text-dark fs-6">First Name</label>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "off", class: "form-control form-control-lg form-control-solid" %>
          <% if resource.errors[:first_name] %>
          <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:first_name].join(", ") %></div>
          <% end %>
        </div>
        <!--end::Col-->
        <!--begin::Col-->
        <div class="col-xl-6">
          <label class="form-label fw-bolder text-dark fs-6">Last Name</label>
          <%= f.text_field :last_name, autocomplete: "off", class: "form-control form-control-lg form-control-solid" %>
          <% if resource.errors[:last_name] %>
          <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:last_name].join(", ") %></div>
          <% end %>
        </div>
        <!--end::Col-->
      </div>
      <!--end::Input group-->
      <!--begin::Input group-->
      <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="form-label fw-bolder text-dark fs-6">Email</label>
        <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg form-control-solid" %>
        <% if resource.errors[:email] %>
        <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:email].join(", ") %></div>
        <% end %>
      </div>
      <!--end::Input group-->
      <!--begin::Input group-->
      <div class="mb-10 fv-row fv-plugins-icon-container" data-kt-password-meter="true" data-controller="password">
        <!--begin::Wrapper-->
        <div class="mb-1">
          <!--begin::Label-->
          <label class="form-label fw-bolder text-dark fs-6">Password</label>
          <!--end::Label-->
          <!--begin::Input wrapper-->
          <div class="position-relative mb-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg form-control-solid" %>
            <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
              <i class="bi bi-eye-slash fs-2"></i>
              <i class="bi bi-eye fs-2 d-none"></i>
            </span>
          </div>
          <!--end::Input wrapper-->
          <!--begin::Meter-->
          <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
          </div>
          <!--end::Meter-->
        </div>
        <!--end::Wrapper-->
        <!--begin::Hint-->
        <% if @minimum_password_length %>
        <div class="text-muted">Use <%= @minimum_password_length %> or more characters with a mix of letters, numbers &amp; symbols.</div>
        <% end %>
        <!--end::Hint-->
        <% if resource.errors[:password] %>
        <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:password].join(", ") %></div>
        <% end %>
        </div>
      <!--end::Input group=-->
      <!--begin::Input group-->
      <div class="fv-row mb-5 fv-plugins-icon-container">
        <label class="form-label fw-bolder text-dark fs-6">Confirm Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg form-control-solid" %>
        <% if resource.errors[:password_confirmation] %>
        <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:password_confirmation].join(", ") %></div>
        <% end %>
      </div>
      <!--end::Input group-->
      <!--begin::Input group-->
      <div class="fv-row mb-10 fv-plugins-icon-container">
        <label class="form-check form-check-custom form-check-inline form-check-solid">
          <%= f.check_box :terms, class: "form-check-input" %>
          <span class="form-check-label fw-bold text-gray-700 fs-6">I Agree to the
          <a href="#" class="ms-1 link-primary">Terms and conditions</a>.</span>
        </label>
        <% if resource.errors[:terms] %>
        <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:terms].join(", ") %></div>
        <% end %>
      </div>
      <!--end::Input group-->
      <!--begin::Actions-->
      <div class="text-center">
        <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
      </div>
      <!--end::Actions-->
    <div></div><% end %>
    <!--end::Form-->
  </div>
  <!--end::Wrapper-->
</div>
