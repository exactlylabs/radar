<%= turbo_frame_tag "change_email" do %>
<div class="d-flex flex-wrap align-items-center mb-8">
  <div id="kt_signin_email_edit" class="flex-row-fluid">
    <!--begin::Form-->
    <%= form_for(current_user, as: "user", url: update_user_email_path, html: { method: :put, class: "form fv-plugins-bootstrap5 fv-plugins-framework" }) do |f| %>
      <div class="row mb-6">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <div class="fv-row mb-0 fv-plugins-icon-container">
            <label for="emailaddress" class="form-label fs-6 fw-bolder mb-3">Enter New Email Address</label>
            <%= f.email_field :email, class: "form-control form-control-lg form-control-solid fw-bold fs-6", placeholder: "Email Address" %>
            <div class="fv-plugins-message-container invalid-feedback"></div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="fv-row mb-0 fv-plugins-icon-container">
            <label for="confirmemailpassword" class="form-label fs-6 fw-bolder mb-3">Confirm Password</label>
            <%= f.password_field :current_password, class: "form-control form-control-lg form-control-solid fw-bold fs-6" %>
            <% if @resource && @resource.errors[:current_password] %>
            <div class="fv-plugins-message-container invalid-feedback"><%= @resource.errors[:current_password].join(", ") %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="d-flex">
        <%= f.submit "Update Email", class: "btn btn-primary me-2 px-6" %>
        <a href="<%= edit_user_registration_path %>" class="btn btn-color-gray-400 btn-active-light-primary px-6">Cancel</a>
      </div>
    <div></div><% end %>
    <!--end::Form-->
  </div>
</div>
<% end %>