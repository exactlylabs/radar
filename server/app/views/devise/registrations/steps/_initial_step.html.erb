<div data-registration-target="step0Wrapper" style="display: block">
  <!--begin::Heading-->
  <div class="mb-10 text-center">
    <!--begin::Title-->
    <h1 class="text-dark mb-3">Create an Account</h1>
    <!--end::Title-->
    <!--begin::Link-->
    <div class="text-gray-400 fw-bold fs-4">Already have an account?
      <%= link_to "Sign in here", new_session_path(resource_name), class: "link-primary fw-bolder" %>
    </div>
    <!--end::Link-->
  </div>
  <!--end::Heading-->
  <!--begin::Input group-->
  <div class="row fv-row mb-7 fv-plugins-icon-container">
    <!--begin::Col-->
    <div class="col-xl-6">
      <label class="form-label fw-bolder text-dark fs-6 required">First Name</label>
      <input type="text"
             id="first_name"
             name="first_name"
             autofocus="true"
             autocomplete="off"
             class="form-control form-control-lg form-control-solid"
             data-action="input->registration#handleInputChange"
             data-registration-target="firstNameInput"
        />
      <% if resource.errors[:first_name] %>
        <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:first_name].join(", ") %></div>
      <% end %>
    </div>
    <!--end::Col-->
    <!--begin::Col-->
    <div class="col-xl-6">
      <label class="form-label fw-bolder text-dark fs-6 required">Last Name</label>
      <input type="text"
             id="last_name"
             name="last_name"
             autocomplete="off"
             class="form-control form-control-lg form-control-solid"
             data-action="input->registration#handleInputChange"
             data-registration-target="lastNameInput"
        />
      <% if resource.errors[:last_name] %>
        <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:last_name].join(", ") %></div>
      <% end %>
    </div>
    <!--end::Col-->
  </div>
  <!--end::Input group-->
  <!--begin::Input group-->
  <div class="fv-row mb-7 fv-plugins-icon-container">
    <label class="form-label fw-bolder text-dark fs-6 required">Email address</label>
    <input type="email"
           id="email"
           name="email"
           autocomplete="off"
           class="form-control form-control-lg form-control-solid"
           data-action="input->registration#handleInputChange"
           data-registration-target="emailInput"
      />
    <% if resource.errors[:email] %>
      <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:email].join(", ") %></div>
    <% end %>
  </div>
  <!--end::Input group-->
  <!--begin::Input group-->
  <div class="mb-10 fv-row fv-plugins-icon-container" data-kt-password-meter="true">
    <!--begin::Wrapper-->
    <div class="mb-1">
      <!--begin::Label-->
      <label class="form-label fw-bolder text-dark fs-6 required">Password</label>
      <!--end::Label-->
      <!--begin::Input wrapper-->
      <div class="position-relative mb-3">
        <input type="password"
               id="password"
               name="password"
               autofocus="true"
               autocomplete="off"
               class="form-control form-control-lg form-control-solid"
               data-action="input->registration#handleInputChange"
               data-registration-target="passwordInput"
               data-password-reveal-target="passwordInput"
          />
        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
              data-action="click->password-reveal#toggleVisibility">
          <i data-password-reveal-target="eyeSlashIcon" class="bi bi-eye-slash fs-2"></i>
          <i data-password-reveal-target="eyeIcon" class="bi bi-eye fs-2 d-none"></i>
        </span>
      </div>
      <!--end::Input wrapper-->
      <!--begin::Meter-->
      <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
      </div>
      <!--end::Meter-->
    </div>
    <!--end::Wrapper-->
    <!--begin::Hint-->
    <% if @minimum_password_length %>
      <div class="text-muted">Use <%= @minimum_password_length %> or more characters with a mix of letters, numbers &amp; symbols.</div>
    <% end %>
    <!--end::Hint-->
    <% if resource.errors[:password] %>
      <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:password].join(", ") %></div>
    <% end %>
  </div>
  <!--end::Input group=-->
  <!--begin::Input group-->
  <div class="fv-row mb-5 fv-plugins-icon-container">
    <label class="form-label fw-bolder text-dark fs-6 required">Confirm Password</label>
    <div class="position-relative mb-3">
      <input type="password"
             id="password_confirmation"
             name="password_confirmation"
             autocomplete="off"
             class="form-control form-control-lg form-control-solid"
             data-action="input->registration#handleInputChange"
             data-registration-target="passwordCheckInput"
             data-password-reveal-target="passwordConfirmationInput"
      />
      <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
            data-action="click->password-reveal#toggleVisibility">
        <i data-password-reveal-target="eyeSlashIconConfirmation" class="bi bi-eye-slash fs-2 password-confirmation"></i>
        <i data-password-reveal-target="eyeIconConfirmation" class="bi bi-eye fs-2 d-none password-confirmation"></i>
      </span>
    </div>
    <% if resource.errors[:password_confirmation] %>
      <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:password_confirmation].join(", ") %></div>
    <% end %>
  </div>
  <!--end::Input group-->
  <!--begin::Input group-->
  <div class="fv-row mb-10 fv-plugins-icon-container">
    <label class="form-check form-check-custom form-check-inline form-check-solid">
      <input type="checkbox"
             id="terms"
             name="terms"
             autocomplete="off"
             class="form-check-input"
             data-action="input->registration#handleInputChange"
             data-registration-target="termsInput"
        />
      <span class="form-check-label fw-bold text-gray-700 fs-6">I Agree to the
          <a href="#" class="ms-1 link-primary">Terms and conditions</a>.</span>
    </label>
    <% if resource.errors[:terms] %>
      <div class="fv-plugins-message-container invalid-feedback"><%= resource.errors[:terms].join(", ") %></div>
    <% end %>
  </div>
  <!--end::Input group-->
  <!--begin::Actions-->
  <div class="text-center">
    <button class="btn btn-lg btn-primary disabled"
            type="button"
            data-action="click->registration#handleContinue"
            data-registration-target="continueButton"
    >Continue</button>
  </div>
</div>