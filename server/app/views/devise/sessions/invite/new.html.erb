
<div class="d-flex flex-center flex-column flex-column-fluid" data-controller="sign-in">
  <!--begin::Wrapper-->
  <div class="w-lg-500px p-10 p-lg-15 mx-auto">
    <!--begin::Form-->
    <form class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework"
          id="new_user" data-turbo="false"
          accept-charset="UTF-8" method="post">
      <!--begin::Heading-->
      <div class="text-center mb-10">
        <!--begin::Title-->
        <h1 class="page-main-title">Sign In to Radar</h1>
        <!--end::Title-->
        <!--begin::Link-->
          <div class="additional-text">New Here?
            <a href="<%= users_invite_sign_up_path(token: params[:token]) %>" class="regular-link">Create an Account</a>
          </div>
        <!--end::Link-->
      </div>
      <!--begin::Heading-->
      <div class="fv-plugins-message-container invalid-feedback">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        <%- end -%>
      </div>
      <!--begin::Input group-->
      <div class="d-flex flex-column mb-7">
        <p data-sign-in-target="errorMessage" style="color: red"></p>
        <!--begin::Label-->
        <label class="forms--label mb-2 required">Email</label>
        <!--end::Label-->
        <!--begin::Input-->
        <input type="email" autofocus="true" autocomplete="email" class="forms--text-input" tabindex="1" data-sign-in-target="emailInput"/>
        <!--end::Input-->
        <div class="fv-plugins-message-container invalid-feedback"></div></div>
      <!--end::Input group-->
      <!--begin::Input group-->
      <div class="forms--input-group d-flex flex-column mb-7">
        <!--begin::Wrapper-->
        <div class="d-flex flex-stack mb-2">
          <!--begin::Label-->
          <label class="forms--label mb-2 required">Password</label>
          <!--end::Label-->
        </div>
        <!--end::Wrapper-->
        <!--begin::Input-->
        <div class="position-relative mb-3" data-controller="password-reveal">
          <input type="password"
                 autocomplete="true"
                 id="current-password"
                 name="current_password"
                 class="forms--text-input forms--text-input-with-decoration w-100"
                 tabindex="2"
                 data-sign-in-target="passwordInput"
                 data-password-reveal-target="passwordInput"
          />
          <span class="forms--input-decoration btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
                data-action="click->password-reveal#toggleVisibility">
						<i data-password-reveal-target="eyeSlashIcon" class="bi bi-eye-slash fs-2"></i>
						<i data-password-reveal-target="eyeIcon" class="bi bi-eye fs-2 d-none"></i>
        	</span>
        </div>
        <!--end::Input-->
        <div class="fv-plugins-message-container invalid-feedback"></div></div>
      <!--end::Input group-->
      <!--begin::Actions-->
      <div class="text-center">
        <!--begin::Submit button-->
        <button type="button"
                class="custom-button custom-button--lg custom-button--primary mx-auto my-2"
                tabindex="3"
                data-action="click->sign-in#finishSignInFromInvite"
                data-registration-target="signInSubmitButton">
          Sign In
        </button>
        <!--end::Submit button-->
        <!--begin::Google link-->
        <!--<a href="#" class="btn btn-light-primary btn-lg fw-bolder my-2">-->
        <!--end::Google link-->
      </div>
      <!--end::Actions-->
      <div></div>
    </form>
    <!--end::Form-->
  </div>
  <!--end::Wrapper-->
</div>
<!--end::Content-->