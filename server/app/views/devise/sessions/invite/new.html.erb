
<div class="d-flex flex-center flex-column flex-column-fluid" data-controller="sign-in">
  <!--begin::Wrapper-->
  <div class="w-lg-500px p-10 p-lg-15 mx-auto">
    <!--begin::Form-->
    <form class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework"
          id="new_user" data-turbo="false"
          accept-charset="UTF-8" method="post">
      <!--begin::Heading-->
      <div class="text-center mb-10">
        <!--begin::Title-->
        <h1 class="text-dark mb-3">Sign In to Radar</h1>
        <!--end::Title-->
        <!--begin::Link-->
          <div class="text-gray-400 fw-bold fs-4">New Here?
            <a href="<%= users_invite_sign_up_path(token: params[:token]) %>" class="link-primary fw-bolder">Create an Account</a>
          </div>
        <!--end::Link-->
      </div>
      <!--begin::Heading-->
      <div class="fv-plugins-message-container invalid-feedback">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        <%- end -%>
      </div>
      <!--begin::Input group-->
      <div class="fv-row mb-10 fv-plugins-icon-container">
        <p data-sign-in-target="errorMessage" style="color: red"></p>
        <!--begin::Label-->
        <label class="form-label fs-6 fw-bolder text-dark">Email</label>
        <!--end::Label-->
        <!--begin::Input-->
        <input type="email" autofocus="true" autocomplete="email" class="form-control form-control-lg form-control-solid" tabindex="1" data-sign-in-target="emailInput"/>
        <!--end::Input-->
        <div class="fv-plugins-message-container invalid-feedback"></div></div>
      <!--end::Input group-->
      <!--begin::Input group-->
      <div class="fv-row mb-10 fv-plugins-icon-container">
        <!--begin::Wrapper-->
        <div class="d-flex flex-stack mb-2">
          <!--begin::Label-->
          <label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
          <!--end::Label-->
        </div>
        <!--end::Wrapper-->
        <!--begin::Input-->
        <input type="password" autocomplete="true" id="current-password" name="current_password" class="form-control form-control-lg form-control-solid" tabindex="2" data-sign-in-target="passwordInput"/>
        <!--end::Input-->
        <div class="fv-plugins-message-container invalid-feedback"></div></div>
      <!--end::Input group-->
      <!--begin::Actions-->
      <div class="text-center">
        <!--begin::Submit button-->
        <button type="button"
                class="btn btn-lg btn-primary fw-bolder me-3 my-2"
                tabindex="3"
                data-action="click->sign-in#finishSignInFromInvite"
                data-registration-target="signInSubmitButton">
          Sign In
        </button>
        <!--end::Submit button-->
        <!--begin::Google link-->
        <!--<a href="#" class="btn btn-light-primary btn-lg fw-bolder my-2">-->
        <!--end::Google link-->
      </div>
      <!--end::Actions-->
      <div></div>
    </form>
    <!--end::Form-->
  </div>
  <!--end::Wrapper-->
</div>
<!--end::Content-->