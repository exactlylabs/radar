<!--begin::Post-->
<div class="post fs-6 d-flex flex-column-fluid" id="kt_post" style="max-height: 68vh">
  <!--begin::Container-->
  <div class="container-xxl w-100 mw-100" data-controller="onboard" data-onboard-step-value="<%= @onboard_step %>">
    <div data-onboard-target="wizard" class="<%= @onboard_step < 0 ? "d-none" : "" %>">
      <%= render partial: "onboard", locals: { step: @onboard_step } %>
    </div>
    <div class="row h-100 w-100">
      <div class="col-4 h-100 pe-6">
        <div class="" style="max-height: 100%; overflow: scroll">
          <div class="card" style="min-height: 200px;">
            <div class="card-header">
              <div class="my-6 d-flex justify-content-between align-items-center w-100">
                <div class="d-flex flex-column">
                  <div class="text-dark fw-bolder my-1 fs-2">Locations</div>
                  <div class="text-muted"><%= @locations.length %> locations</div>
                </div>
                <div>
                  <div class="btn-group">
                    <a href="#" 
                       class="btn btn-sm <%= params[:filter] ? 'btn-light-primary' : 'btn-light' %> btn-active-light-primary"
                       data-bs-toggle="dropdown"
                       aria-expanded="false"
                       style="border-radius: 6px"
                       id="filters-button"
                    >
                      <%= params[:filter] ? parse_filter_param(params[:filter]) : 'All locations' %>
                      <span class="svg-icon svg-icon-5 m-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                          <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="black"></path>
                        </svg>
                      </span>
                    </a>
                    <div class="dropdown-menu fw-bold fs-7 py-4"
                      aria-labelledby="schedule-button">
                      <a href="<%= params[:filter] == 'all' ? dashboard_path : dashboard_path(filter: 'all') %>" 
                        class="menu-item text-hover-gray-500 <%= params[:filter].nil? || params[:filter] == 'all' ? 'text-primary' : 'text-gray-700' %> p-2 px-3">
                        All locations
                      </a>
                      <!--begin::Menu item-->
                      <a href="<%= params[:filter] == 'active' ? dashboard_path : dashboard_path(filter: 'active') %>" 
                        class="menu-item text-hover-gray-500 <%= params[:filter] == 'active' ? 'text-primary' : 'text-gray-700' %> p-2 px-3">
                        Active locations
                      </a>
                      <!--end::Menu item-->
                      <!--begin::Menu item-->
                      <a href="<%= params[:filter] == 'inactive' ? dashboard_path : dashboard_path(filter: 'inactive') %>" 
                        class="menu-item text-hover-gray-500 <%= params[:filter] == 'inactive' ? 'text-primary' : 'text-gray-700' %> p-2 px-3">
                        Inactive locations
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div style="max-height: 100%; overflow: scroll">
                <% @locations.each do |location| %>
                  <%= render "location_row", location: location %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-8 h-100 position-relative">
        <div class="position-absolute top-0 bottom-0 start-0 end-0 <%= @onboard_step > 0 ? "d-none" : "" %>" data-onboard-target="map"  id="map"></div>
      </div>
    </div>
  </div>
  <!--end::Container-->
</div>
<!--end::Post-->
<script>
  var map = L.map("map").setView([51.505, -0.09], 13);

  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution:
      '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
  }).addTo(map);

  var markers = [];
  <% @locations.each do |l| %>
    var icon = L.divIcon({
      html: `<?xml version="1.0" encoding="utf-8"?>
              <!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN" "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
              <span class="svg-icon svg-icon-2hx">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" enable-background="new 0 0 365 560">
                  <path style="fill: #00AEEF" opacity="1" d="M18.0624 15.3453L13.1624 20.7453C12.5624 21.4453 11.5624 21.4453 10.9624 20.7453L6.06242 15.3453C4.56242 13.6453 3.76242 11.4453 4.06242 8.94534C4.56242 5.34534 7.46242 2.44534 11.0624 2.04534C15.8624 1.54534 19.9624 5.24534 19.9624 9.94534C20.0624 12.0453 19.2624 13.9453 18.0624 15.3453Z"/>
                  <path style="white: transparent" d="M12.0624 13.0453C13.7193 13.0453 15.0624 11.7022 15.0624 10.0453C15.0624 8.38849 13.7193 7.04535 12.0624 7.04535C10.4056 7.04535 9.06241 8.38849 9.06241 10.0453C9.06241 11.7022 10.4056 13.0453 12.0624 13.0453Z"/>
                </svg>
              </span>`,
      className: "<%= l.online? ? "location--online" : "location--offline" %>",
      iconSize: [20, 30],
      iconAnchor: [10, 30],
      popupAnchor: [0, -30],
    });
    var marker = L.marker([<%= l.latitude %>, <%= l.longitude %>], {icon: icon}).addTo(map)
      .bindPopup('<a href="<%= location_path(l) %>"><%= l.name %></a><br /><%= l.online? ? "Online" : "Offline"%><br />Latest Download: <%= number_with_precision l.latest_download, precision: 3 %> mbps<br />Latest Upload: <%= number_with_precision l.latest_upload, precision: 3 %> mbps');
    markers.push(marker);
  <% end %>

  var group = new L.featureGroup(markers);
  map.fitBounds(group.getBounds());

  this.observer = new ResizeObserver((entries) => {
    if (entries.length > 0 &&
        entries[0].contentRect.width > 0 &&
        entries[0].contentRect.height > 0) {
      map.fitBounds(group.getBounds());
    }
  });

  this.observer.observe(document.querySelector('#map'));

</script>
