<%= turbo_frame_tag 'outages-widget' do %>
  <div class="dashboard--outages-card-wrapper">
    <%= render partial: "dashboard/components/widgets/outages/filters" %>
    <%= render partial: "dashboard/components/widgets/outages/status_bar" %>
    <div class="category--horizontal-divider"></div>
    <%= render partial: "dashboard/components/widgets/outages/metrics" %>
    <% if @outages.count != 0 %>
      <div class="dashboard--horizontal-divider full-width"></div>
      <a href="<%= detail_modal_outages_path(outage_type: params[:outage_type], ids: @outages_ids) %>"
         class="regular-link cursor-pointer"
         data-turbo-frame="outages_details_modal"
      >View all outages...</a>
    <% end %>
  </div>
<% end %>