<div class="dashboard--datepicker">
  <div class="dashboard--datepicker-month-selector">
    <button data-action="click->dashboard-time-filter#previousMonth">
      <%= image_tag image_url('arrow-left-dark.png'), width: 16, height: 16 %>
    </button>
    <div data-dashboard-time-filter-target="monthYear">
      <button data-action="click->dashboard-time-filter#toggleMonthYearPicker">
        <p>
          <%= Date::MONTHNAMES[Time.now.month] %>
          <%= Time.now.year %>
        </p>
        <%= image_tag image_url('sort-icon-down.png'), width: 16, height: 16 %>
      </button>
      <div class="dashboard--month-year-picker" data-dashboard-time-filter-target="monthYearPicker" hidden>
        <div class="dashboard--month-year-picker-column" data-type="months">
          <% Date::MONTHNAMES.compact.each do |month_name| %>
            <span <%= month_name == Date::MONTHNAMES[Time.now.month] ? 'data-selected=true' : nil %>
                  data-dashboard-time-filter-target="monthName"
                  data-action="click->dashboard-time-filter#selectMonth"
            ><%= month_name %></span>
          <% end %>
        </div>
        <div class="dashboard--month-year-picker-column" data-type="years">
          <% (1970..2024).each do |year| %>
            <span <%= year == Time.now.year ? 'data-selected=true' : nil %>
                  data-dashboard-time-filter-target="year"
                  data-action="click->dashboard-time-filter#selectYear"
            ><%= year %></span>
          <% end %>
        </div>
      </div>
    </div>
    <button data-action="click->dashboard-time-filter#nextMonth">
      <%= image_tag image_url('arrow-right-dark.png'), width: 16, height: 16 %>
    </button>
  </div>
  <%= render partial: "dashboard/components/weeks_grid" %>
</div>