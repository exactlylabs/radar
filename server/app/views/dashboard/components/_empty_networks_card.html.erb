<div class="cards--default pods--empty-card"
     id="empty-networks-card"
>
  <div class="pods--empty-card-icon-container">
    <%= image_tag image_url('big-dashboard-icon.png'), width: 32, height: 32 %>
  </div>
  <h3 class="pods--empty-card-title wrap">Your dashboard is not available yet.</h3>
  <span class="additional-text wrap">Your network performance details and insights will show up here as soon as you create a network.</span>
  <a type="button"
     class="custom-button custom-button--primary custom-button--lg mt-8"
     href="<%= new_location_path %>"
     data-turbo-frame="new_location_modal"
  >
    <%= image_tag image_url('white-plus.png'), width: 16, height: 16, class: "me-2" %>
    Create a network
  </a>
</div>
