<% responsive = @responsive || false %>

<%= turbo_frame_tag "total-data-widget" do %>
  <% if @total_data.nil? || @total_data.all? { |object| object['y'] == 0 } %>
    <%= render partial: "dashboard/components/widgets/no_data" %>
  <% else %>
    <%= render partial: "dashboard/components/widgets/total_data_card", locals: { data_amount: @data_amount, total_data: @total_data, group_by: @group_by } %>
  <% end %>
<% end %>