<div class="networks--details-content-container">
  <div class="networks--top-info-card">
    <%= render partial: "networks/components/info_cell", 
        locals: {
          title: 'Address',
          subtitle: network.address
        }
    %>
    <%= render partial: "networks/components/info_cell", 
        locals: {
          title: 'Total pods',
          subtitle: "#{network.clients.count} #{network.clients.count == 1 ? 'pod' : 'pods'}"
        }
    %>
    <%= render partial: "networks/components/info_cell", 
        locals: {
          title: 'Category',
          subtitle: nil,
          partial: "location_categories/table_cell",
          partial_locals: {categories: network.categories, shows_tooltip: true, row: 0}
        }
    %>
    <%= render partial: "networks/components/info_cell", 
        locals: {
          title: 'Internet Provider',
          subtitle: network.latest_measurement&.autonomous_system.nil? ? "Not available" : network.latest_measurement.autonomous_system.autonomous_system_org.name
        }
    %>
  </div>

  <div class="networks--content-cards-container">
    <%= render partial: "networks/components/speeds_card", locals: { network: network } %>
    <%= render partial: "networks/components/map_card", locals: { network: network } %>
  </div>
</div>