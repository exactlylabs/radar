<%= render partial: "application/components/modals/modal_header",
           locals: { title: "Create new network", is_custom: true, goes_back: true, go_back_url: onboarding_step_2_path, go_back_action: "click->onboard#goToOnboardingStep" }
%>
<%= form_with model: @location, class: "networks--modal-form", id: "create-network-form", data: { controller: "location-form" }  do |form| %>
  <%= render partial: "networks/modals/shared/network_details_modal",
             locals: {
               type: "create",
               form: form,
               is_onboarding: true,
               location: @location,
             }
  %>
<% end %>
<div class="modal-footer modals--footer">
  <%= render partial: "application/components/buttons/close_modal_button", locals: { text: "Cancel", is_custom: true } %>
  <button type="submit"
          class="custom-button custom-button--primary custom-button--sm"
          data-controller="loading-feedback"
          data-action="click->loading-feedback#replaceContent"
          form="create-network-form"
  >Create network</button>
</div>