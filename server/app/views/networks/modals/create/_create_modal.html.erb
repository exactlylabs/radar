<%= render partial: "application/components/modals/modal_header",
    locals: { title: "Create a network", is_custom: true }
%>
<%= form_with model: @location, class: "networks--modal-form",
              data: { controller: "location-form", action: "handlePinMoved@window->location-form#handlePinMoved" } do |form| %>
  <%= render partial: "networks/modals/shared/network_details_modal",
      locals: {
        type: "create",
        form: form,
        location: @location,
      }
  %>
<% end %>