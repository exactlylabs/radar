<% if FeatureFlagHelper.is_available('roles', current_user) %>

  <% if current_account.is_all_accounts? %>
    <% @users_to_delete_ids.each do |c| %>
      <%= turbo_stream.remove c.to_s do %>
      <% end %>
    <% end %>

    <% @invites_to_delete_ids.each do |c| %>
      <%= turbo_stream.remove c.to_s do %>
      <% end %>
    <% end %>
  <% else %>
    <% @users_to_delete_ids.each do |c| %>
      <%= turbo_stream.remove "users_account_#{c}" do %>
      <% end %>
    <% end %>

    <% @invites_to_delete_ids.each do |c| %>
      <%= turbo_stream.remove "invite_#{c}" do %>
      <% end %>
    <% end %>
  <% end %>

<% else %>
  <% @users_to_delete_ids.each do |c| %>
    <%= turbo_stream.remove "users_account_#{c}" do %>
    <% end %>
  <% end %>

  <% @invites_to_delete_ids.each do |c| %>
    <%= turbo_stream.remove "invite_#{c}" do %>
    <% end %>
  <% end %>
<% end %>

<%= turbo_stream.append 'realtime-notice' do %>
  <%= render partial: 'application/notice_alert', locals: {notice: @notice} %>
<% end %>