<% if @error %>
  <%= render partial: "application/components/modals/empty_custom_modal",
             locals: {
               modal_title: "Create an account",
               modal_partial_path: "accounts/modals/create/onboarding_create_modal",
               resource: @account,
               custom_submit_end_handler: nil
             }
  %>
<% else %>
  <%= turbo_stream.update "ftue_modal" do %>
    <%= render partial: "application/components/modals/empty_custom_modal",
               locals: {
                 modal_title: 'Welcome to Radar',
                 modal_partial_path: "dashboard/modals/onboarding/second_step",
                 resource: nil,
                 custom_submit_end_handler: nil,
               }
    %>
  <% end %>
  <%= turbo_stream.update "dashboard-main-content" do %>
    <%= render partial: "dashboard/components/empty_networks_card" %>
  <% end %>
<% end %>