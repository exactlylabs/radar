<% responsive = @responsive || false %>

<%= turbo_frame_tag 'online-pods-widget' do %>
  <% if @online_pods.count == 0 %>
    <%= render partial: "dashboard/components/widgets/no_data" %>
  <% else %>
    <canvas id="online-pods-chart<%= responsive ? '-responsive' : ''%>"
            data-controller="multi-line-chart"
            data-line-chart-data="<%= @online_pods.to_json %>"
            data-parent-id="online-pods-widget<%= responsive ? '-responsive' : ''%>"
            data-label-suffix=""
            data-action="toggleLine@window->multi-line-chart#toggleLine"
            data-chart-id="onlinePods"
            data-skeleton-id="online-pods-chart-skeleton"
    ></canvas>
    <div id="online-pods-chart-skeleton">
      <%= render partial: "dashboard/components/widgets/line_chart_skeleton" %>
    </div>
  <% end %>
<% end %>