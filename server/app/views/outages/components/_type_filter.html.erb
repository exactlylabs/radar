<div class="tables--filters-button-container"
     data-controller="filters"
     data-action="click->filters#toggleFiltersMenu"
     data-menu-id="outages-type-filter-menu"
>
  <button type="button"
          class="custom-button custom-button--sm custom-button--secondary"
  >
    All outages
    <%= image_tag image_url('caret.png'), width: 16, height: 16, class: "ms-1" %>
  </button>
  <div class="tables--filters-menu-container invisible"
       data-filters-target="filtersMenu"
       id="outages-type-filter-menu"
  >
    <button class="tables--filters-menu-item table-filter-option active" data-action="click->outages-modal#filterType" data-type="all">
      All outages
      <%= image_tag image_url('checkmark-blue-icon.png'), width: 16, height: 16 %>
    </button>
    <button class="tables--filters-menu-item table-filter-option" data-action="click->outages-modal#filterType" data-type="power">
      Power outage
      <%= image_tag image_url('checkmark-blue-icon.png'), width: 16, height: 16 %>
    </button>
    <button class="tables--filters-menu-item table-filter-option" data-action="click->outages-modal#filterType" data-type="isp">
      ISP outage
      <%= image_tag image_url('checkmark-blue-icon.png'), width: 16, height: 16 %>
    </button>
    <button class="tables--filters-menu-item table-filter-option" data-action="click->outages-modal#filterType" data-type="pod">
      Pod failure
      <%= image_tag image_url('checkmark-blue-icon.png'), width: 16, height: 16 %>
    </button>
  </div>
</div>