<% require "./app/controllers/helpers/unified_member.rb" %>

<% if type == UsersAccount.name || type == UnifiedMember.name %>
  <%= render partial: "users/components/user_row", 
      locals: {
        row: row,
        widths: widths,
        index: index,
        even: even,
        should_ignore_cell: row.is_a?(UnifiedMember)
      }
  %>
<% else %>
  <%= render partial: "users/components/invitee_row", 
      locals: {
        row: row,
        widths: widths,
        index: index
      }
  %>
<% end %>