<% if type == UsersAccount.name %>
  <%= render partial: "users/components/user_row",
      locals: {
        row: row,
        widths: widths,
        index: "#{index}-#{UsersAccount.name}",
        even: even
      }
  %>
<% else %>
  <%= render partial: "users/components/invitee_row",
      locals: {
        row: row,
        widths: widths,
        index: "#{index}-#{Invite.name}",
      }
  %>
<% end %>
