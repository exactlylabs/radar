<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
  <div class="d-flex flex-stack flex-wrap flex-sm-nowrap">
    <!--begin::Info-->
    <div class="d-flex flex-column align-items-start justify-content-center flex-wrap me-2">
      <!--begin::Title-->
      <% if FeatureFlagHelper.is_available('roles', current_user) %>
        <h1 class="page-main-title"><%= invitee.email %></h1>
      <% else %>
        <h1 class="page-main-title"><%= invitee.full_name %></h1>
      <% end %>
      <!--end::Title-->
      <!--begin::Breadcrumb-->
      <ul class="breadcrumb fw-bold fs-base my-1">
        <li class="breadcrumb-item text-muted">
          <a href="<%= users_account_index_path %>" class="text-muted page-sub-title"><%= invitee.account.name %></a>
        </li>
        <li class="breadcrumb-item page-sub-title">Members & Sharing</li>
      </ul>
      <!--end::Breadcrumb-->
    </div>
    <!--end::Info-->
  </div>
</div>
<!--end::Toolbar-->

<% if !FeatureFlagHelper.is_available('roles', current_user) %>
  <div class="post fs-6 d-flex flex-column-fluid justify-content-center" id="kt_post">
    <!--begin::Container-->
    <div class="w-100 d-flex flex-column" style="max-width: none;">
      <!--begin::OptionsCard-->
      <!-- TODO: add when more options are available? -->
      <!--end::OptionsCard-->
      <!--begin::Card-->
      <%= render partial: "users/invitee_details", locals: { invitee: invitee } %>
      <!--end::Card-->
    </div>
    <!--end::Container-->
  </div>
<% else %>
  <div class="users--details-content-container">
    <%= render partial: "users/components/member_data_card", locals: { member: invitee, type: Invite.name } %>
    <%= render partial: "users/components/member_role_card", locals: { member: invitee } %>
  </div>
<% end %>