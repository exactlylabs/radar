---
import styles from './bullet_point.module.css';
const { title, content, direction } = Astro.props;
---

<div class={styles.container} data-direction={direction}>
  <div class={styles.iconCircle}>
    <slot/>
  </div>
  <div class={styles.textContainer}>
    <h5 class={styles.title}>{title}</h5>
    <p class={styles.content}>{content}</p>
  </div>
</div>