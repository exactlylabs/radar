---
import HeroWithText from "../common/content/HeroWithText.astro";
import styles from './styles/broadband_modal.module.css';
import sharedModalStyles from './styles/shared_modals.module.css';
import image from '../../assets/images/broadband-modal-bg.webp';
import GoToLinkButton from "../common/buttons/GoToLinkButton.astro";
import BulletPoint from "../common/content/BulletPoint.astro";

import broadbandMain from '../../assets/images/broadband-mapping.jpg';
import broadbandSearch from '../../assets/images/broadband-search.jpg';
import broadbandFilters from '../../assets/images/broadband-filters.jpg';
---

<div class={sharedModalStyles.content}>
  <section class={sharedModalStyles.modalHero}>
    <div class={sharedModalStyles.bgImage} data-bg-image={'true'} style={`background-image: url(${image.src})`}></div>
    <div class={sharedModalStyles.heroContainer}>
      <HeroWithText head="Broadband Mapping" title="Explore Broadband Nationwide" content="Explore a comprehensive online map aggregating millions of anonymized crowd-sourced internet speed tests across the U.S. This tool reveals the real median speeds experienced at state, county, and tribal levels, enabling users to track changes in internet quality over time, compare ISPs, and explore test data categorized under different speed benchmarks." />
    </div>
    <GoToLinkButton href="https://broadbandmapping.com" text="Go to Website"/>
    <div class={sharedModalStyles.itemsGrid}>
      <BulletPoint title="Geographical Insights"
        content="Zoom in on specific geographies to analyze how internet speeds vary across state, county, or tribal levels."
        direction="column"
