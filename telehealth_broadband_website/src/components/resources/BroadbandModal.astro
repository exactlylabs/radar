    <div class={styles.imagesGrid}>
      <div style={`background-image: url(${broadbandMain.src})`}></div>
      <div style={`background-image: url(${broadbandSearch.src})`}></div>
      <div style={`background-image: url(${broadbandFilters.src})`}></div>
    </div>
  </section>
</div>