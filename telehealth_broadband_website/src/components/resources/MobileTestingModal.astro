---
import HeroWithText from "../common/HeroWithText.astro";
import styles from './mobile_testing_modal.module.css';
import image from '../../assets/images/mobile-testing.webp';
import GoToLinkButton from "../common/buttons/GoToLinkButton.astro";
import BulletPoint from "../opportunities/BulletPoint.astro";

import mobileApp from '../../assets/images/mobile-app.webp';
import broadbandSearch from '../../assets/images/broadband-search.webp';
import broadbandFilters from '../../assets/images/broadband-filters.webp';
import Epigraph from "../stories/Epigraph.astro";
import Image from "astro/components/Image.astro";
