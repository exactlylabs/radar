---
import styles from './styles/state_findings_card.module.css';
import HeroWithText from "../common/content/HeroWithText.astro";
import ContainedReadMore from "../common/buttons/ContainedReadMore.astro";

const { head, title, content, link, backgroundImage } = Astro.props;
---

<li class={styles.card} style={`background-image: url(${backgroundImage.src})`}>
  <div class={styles.gradient}></div>
  <a href={link} class={styles.cardLink}>
    <div class={styles.heroContainer}>
      <HeroWithText head={head} title={title} content={content} variant="state-findings"/>
    </div>
    <ContainedReadMore text={`Learn more`} />
  </a>
</li>