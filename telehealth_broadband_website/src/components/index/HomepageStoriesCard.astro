---
import styles from './styles/homepage_stories_card.module.css';
import HeroWithText from "../common/content/HeroWithText.astro";
import ReadMoreButton from "../common/buttons/ReadMoreButton.astro";
import ContainedReadMore from "../common/buttons/ContainedReadMore.astro";

const { head, title, content, image, link } = Astro.props;
---

<li class={styles.card}
  style={`background-image: url(${image})`}
  data-carrousel-card
>
  <div class={styles.gradient}></div>
  <a href={link} class={styles.cardLink}>
    <div class={styles.heroContainer}>
      <HeroWithText head={head}
        title={title}
        content={content}
        inCard
      />
    </div>
    <ContainedReadMore text="Learn more"/>
  </a>
</li>