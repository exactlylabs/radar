import SectionWithIncomingImage from "../../components/common/wrappers/SectionWithIncomingImage";
import EvaluationResultsIncomingImageContent
  from "../../components/findings/evaluation-results/EvaluationResultsIncomingImageContent.astro";

import heroBgImage from '../../assets/images/evaluation-results-hero.webp';
