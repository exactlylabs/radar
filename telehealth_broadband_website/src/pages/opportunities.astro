---
import '../global.css';
import styles from '../pages/opportunities.module.css';
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionWithIncomingImage from '../components/opportunities/SectionWithIncomingImage';
import FloatingTabs from '../components/opportunities/FloatingTabs.astro';
import sectionImage from '../assets/images/router-image.webp';
import dadSonImage from '../assets/images/dad-son-image.webp';
import workerImage from '../assets/images/worker-image.webp';
import phoneMetricsImage from '../assets/images/phone-metrics-image.webp';
---
<BaseLayout>
  <div style="height: 1000px"></div>
  <section style="position: relative; padding-top: 10rem;">
    <FloatingTabs ids={['box-1', 'box-2', 'box-3', 'box-4']}/>
    <div class={styles.sectionsContainer}>
      <SectionWithIncomingImage
        client:only="react"
        contentIds={['box-1', 'box-2', 'box-3', 'box-4']}
        imageSrcs={[sectionImage.src, dadSonImage.src, workerImage.src, phoneMetricsImage.src]}
      >
        <div style="width: 100%; display: flex; flex-direction: column; align-items: flex-start; justify-content: flex-start; gap: 6rem">
          <div id="box-1" style="scroll-margin-top: 20vh; outline: solid 1px red; opacity: 0.3; height: 700px; width: 100%">BOX 1</div>
          <div id="box-2" style="scroll-margin-top: 20vh; outline: solid 1px blue; opacity: 0.3; height: 700px; width: 100%">BOX 2</div>
          <div id="box-3" style="scroll-margin-top: 20vh; outline: solid 1px green; opacity: 0.3; height: 700px; width: 100%">BOX 3</div>
          <div id="box-4" style="scroll-margin-top: 20vh; outline: solid 1px yellow; opacity: 0.3; height: 700px; width: 100%">BOX 4</div>
        </div>
      </SectionWithIncomingImage>
    </div>
  </section>
  <div style="height: 1000px"></div>
</BaseLayout>