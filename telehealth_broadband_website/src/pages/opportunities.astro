---
import '../global.css';
import styles from './styles/opportunities.module.css';
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionWithIncomingImage from '../components/opportunities/SectionWithIncomingImage';
import FloatingTabs from '../components/opportunities/FloatingTabs.astro';
import sectionImage from '../assets/images/router-image.webp';
import dadSonImage from '../assets/images/dad-son-image.webp';
import workerImage from '../assets/images/worker-image.webp';
import phoneMetricsImage from '../assets/images/phone-metrics-image.webp';
import HeroWithText from "../components/common/HeroWithText.astro";
import BulletPoint from '../components/opportunities/BulletPoint.astro';
---
<BaseLayout>
  <div style="height: 1000px"></div>
  <section style="position: relative; padding-top: 10rem;" id="scroll-to">
    <FloatingTabs
      ids={['box-1', 'box-2', 'box-3', 'box-4']}
      labels={['Community Education']}
      scrollToId="scroll-to"
    />
    <div class={styles.sectionsContainer}>
      <SectionWithIncomingImage
        client:only="react"
        contentIds={['box-1', 'box-2', 'box-3', 'box-4']}
        imageSrcs={[sectionImage.src, dadSonImage.src, workerImage.src, phoneMetricsImage.src]}
      >
        <div style="width: 100%;display: flex; flex-direction: column; align-items: flex-start; justify-content: flex-start; gap: 6rem">
          <div id="box-1" style="width: 100%; scroll-margin-top: 20vh; max-width: 580px; ">
            <HeroWithText head="Community Education" title="Empowering Through Knowledge" content="A common barrier in rural areas is a lack of awareness about internet offerings and reasonable speeds or reliability. Community-wide education can reduce frustration and help residents advocate for better services when current options fall short."/>
            <div style="margin-top: 3.5rem; border-top: solid 1px rgba(255, 255, 255, 0.1); border-bottom: solid 1px rgba(255, 255, 255, 0.1); width: 577px; padding: 2rem 1.5rem; box-sizing: border-box; display: flex; flex-direction: column; align-items: flex-start; justify-content: flex-start;">
              <BulletPoint title="Informing Residents About Internet Options"
                content="Clear information on ISPs, speeds, performance, and costs helps residents make informed choices. Existing resources often seem biased or insufficient."
              >
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24" height="24">
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(15.4009 3.93333)" d="M3.2992122 0L1.3113899 0C0.68304861 0.00043885884 0.14320639 0.44625098 0.023970855 1.0631756C-0.095264673 1.6801002 0.23957603 2.294966 0.82250106 2.5295112L2.8406343 3.3361778C3.4249132 3.5699093 3.760993 4.1855297 3.6416211 4.8033991C3.5222492 5.421268 2.98104 5.8673968 2.3517456 5.8666677L0.36587885 5.8666677" fill-rule="evenodd"/>
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(16.4242 2.75747)" d="M0.8091954 1.1758621L0.8091954 0.44252872" fill-rule="evenodd"/>
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(16.4242 9.35747)" d="M0.8091954 1.1758621L0.8091954 0.44252872" fill-rule="evenodd"/>
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(11.3668 1)" d="M0 5.8666668C0 9.1067371 2.6265962 11.733334 5.8666668 11.733334C9.1067371 11.733334 11.733334 9.1067371 11.733334 5.8666668C11.733334 2.6265962 9.1067371 0 5.8666668 0C2.6265962 0 0 2.6265962 0 5.8666668" fill-rule="evenodd"/>
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(1.1001 11.9433)" d="M0 0L22 5.1900444" fill-rule="evenodd"/>
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(9.16676 14.9333)" d="M5.8666668 3.6666667L0 3.6666667L2.9333334 0L5.8666668 3.6666667Z" fill-rule="evenodd"/>
                </svg>
              </BulletPoint>
              <div style="height: 1px; width: calc(100% + 3rem); margin: 2rem 0 2rem -1.5rem; background-color: rgba(255, 255, 255, 0.1);"></div>
              <BulletPoint title="Setting Higher Expectations"
                           content="Educating users on what their internet can support, such as streaming, telehealth, or remote work, empowers them to maximize their experience. Many didnâ€™t realize the services available with a better plan or by addressing local, non-ISP issues."
              >
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24" height="14">
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(15.0977 1.09766)" d="M6 6L6 0L0 0" fill-rule="evenodd"/>
                  <path fill="none" stroke="#4B7BE5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" transform="translate(1.09766 1.09766)" d="M20 0L12.943111 7.0568891C12.693038 7.3071222 12.35377 7.4477153 12 7.4477153C11.64623 7.4477153 11.306962 7.3071222 11.056889 7.0568891L8.2764444 4.2764444C8.026371 4.0262113 7.6871033 3.885618 7.3333335 3.885618C6.9795632 3.885618 6.640295 4.0262113 6.3902221 4.2764444L0 10.666667" fill-rule="evenodd"/>
                </svg>
              </BulletPoint>
            </div>
          </div>
          <div id="box-2" style="scroll-margin-top: 20vh; outline: solid 1px blue; opacity: 0.3; height: 700px; width: 100%">BOX 2</div>
          <div id="box-3" style="scroll-margin-top: 20vh; outline: solid 1px green; opacity: 0.3; height: 700px; width: 100%">BOX 3</div>
          <div id="box-4" style="scroll-margin-top: 20vh; outline: solid 1px yellow; opacity: 0.3; height: 700px; width: 100%">BOX 4</div>
        </div>
      </SectionWithIncomingImage>
    </div>
  </section>
  <div style="height: 1000px"></div>
</BaseLayout>